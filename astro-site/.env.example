# NANKANアナリティクス 環境変数設定

# ============================================
# 基本設定
# ============================================
PUBLIC_SITE_URL=https://nankan-analytics.keiba.link
ADMIN_API_KEY=your-secure-admin-api-key-here

# ============================================
# Supabase設定
# ============================================
PUBLIC_SUPABASE_URL=https://your-project.supabase.co
PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# ============================================
# Stripe設定（決済システム）
# ============================================
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Stripe商品ID
STRIPE_STANDARD_PRICE_ID=price_standard_monthly
STRIPE_PREMIUM_PRICE_ID=price_premium_monthly

# ============================================
# メール配信設定
# ============================================
RESEND_API_KEY=re_your-resend-api-key
FROM_EMAIL=noreply@nankan-analytics.keiba.link
SUPPORT_EMAIL=support@nankan-analytics.keiba.link

# ============================================
# 外部API設定
# ============================================
# JRA-VAN API（競馬データ）
JRAVAN_API_KEY=your-jravan-api-key

# OpenAI API（AI予想）
OPENAI_API_KEY=sk-your-openai-api-key

# ============================================
# セキュリティ設定
# ============================================
JWT_SECRET=your-jwt-secret-key-for-sessions
ENCRYPTION_KEY=your-32-character-encryption-key

# ============================================
# 開発・本番環境設定
# ============================================
NODE_ENV=development
# NODE_ENV=production

# デバッグモード
DEBUG_MODE=true

# ログレベル (error, warn, info, debug)
LOG_LEVEL=info

# ============================================
# アプリケーション設定
# ============================================
# セッション有効期限（秒）
SESSION_TIMEOUT=7200

# レート制限（API呼び出し/分）
RATE_LIMIT=100

# ファイルアップロード上限（MB）
MAX_UPLOAD_SIZE=10
