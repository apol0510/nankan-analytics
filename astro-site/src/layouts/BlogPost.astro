---
import BaseLayout from './BaseLayout.astro';
import type { CollectionEntry } from 'astro:content';

type Props = CollectionEntry<'blog'>['data'] & {
  slug: string;
};

const { title, description, pubDate, tags, category, author, heroImage } = Astro.props;
const formattedDate = pubDate.toLocaleDateString('ja-JP', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<BaseLayout title={title} description={description}>
  <article class="blog-post">
    <header class="post-header">
      {heroImage && (
        <img 
          src={heroImage} 
          alt={title}
          class="hero-image"
        />
      )}
      <div class="post-meta">
        <h1 class="post-title">{title}</h1>
        <div class="meta-info">
          <time datetime={pubDate.toISOString()}>{formattedDate}</time>
          <span class="author">by {author}</span>
          <span class="category">{category}</span>
        </div>
        {tags && tags.length > 0 && (
          <div class="tags">
            {tags.map((tag) => (
              <span class="tag">#{tag}</span>
            ))}
          </div>
        )}
      </div>
    </header>

    <div class="post-content">
      <slot />
    </div>

    <footer class="post-footer">
      <div class="post-navigation">
        <!-- 前後記事ナビゲーション -->
      </div>
    </footer>
  </article>
</BaseLayout>

<style>
.blog-post {
  max-width: 800px;
  margin: 0 auto;
  padding: 2rem 1rem;
}

.post-header {
  margin-bottom: 3rem;
}

.hero-image {
  width: 100%;
  height: 300px;
  object-fit: cover;
  border-radius: 8px;
  margin-bottom: 2rem;
}

.post-title {
  font-size: 2.5rem;
  font-weight: bold;
  line-height: 1.2;
  margin-bottom: 1rem;
  color: #e2e8f0;
}

.meta-info {
  display: flex;
  gap: 1rem;
  align-items: center;
  margin-bottom: 1rem;
  font-size: 0.9rem;
  color: #94a3b8;
}

.category {
  background: #3b82f6;
  color: white;
  padding: 0.25rem 0.75rem;
  border-radius: 4px;
  font-size: 0.8rem;
}

.tags {
  display: flex;
  gap: 0.5rem;
  flex-wrap: wrap;
}

.tag {
  background: #1e293b;
  color: #8b5cf6;
  padding: 0.25rem 0.5rem;
  border-radius: 4px;
  font-size: 0.8rem;
  border: 1px solid #374151;
}

.post-content {
  line-height: 1.7;
  color: #e2e8f0;
}

.post-content :global(h2) {
  font-size: 1.8rem;
  margin: 2.5rem 0 1rem 0;
  color: #f1f5f9;
  border-bottom: 2px solid #3b82f6;
  padding-bottom: 0.5rem;
}

.post-content :global(h3) {
  font-size: 1.4rem;
  margin: 2rem 0 1rem 0;
  color: #f1f5f9;
}

.post-content :global(p) {
  margin-bottom: 1.5rem;
}

.post-content :global(pre) {
  background: #1e293b;
  border: 1px solid #374151;
  border-radius: 8px;
  padding: 1.5rem;
  overflow-x: auto;
  margin: 1.5rem 0;
}

.post-content :global(code) {
  background: #1e293b;
  padding: 0.2rem 0.4rem;
  border-radius: 4px;
  font-size: 0.9rem;
  color: #8b5cf6;
}

.post-footer {
  margin-top: 3rem;
  padding-top: 2rem;
  border-top: 1px solid #374151;
}

@media (max-width: 768px) {
  .blog-post {
    padding: 1rem 0.5rem;
  }
  
  .post-title {
    font-size: 2rem;
  }
  
  .meta-info {
    flex-direction: column;
    align-items: flex-start;
    gap: 0.5rem;
  }
}
</style>