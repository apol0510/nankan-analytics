    margin: 2rem 0 1rem 0;
    color: #8b5cf6;
  }

  .prose p {
    margin: 1.5rem 0;
  }

  .prose ul, .prose ol {
    margin: 1.5rem 0;
    padding-left: 2rem;
  }

  .prose li {
    margin: 0.5rem 0;
  }

  .prose code {
    background: rgba(59, 130, 246, 0.1);
    color: #3b82f6;
    padding: 0.2rem 0.4rem;
    border-radius: 0.25rem;
    font-size: 0.9em;
