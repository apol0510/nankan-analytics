                            return;
                        }
                        
                        console.log('„Ç´„Ç¶„É≥„Éà„Ç¢„ÉÉ„ÉóÈñãÂßã:', target, suffixAttr);
                        animateValue(entry.target, 0, target, 2000, suffixAttr);
