---
import BaseLayout from '../layouts/BaseLayout.astro';
import allRacesData from '../data/allRacesPrediction.json';

// 無料プランはメインレース（free tier）のみアクセス可能
const freeRaces = allRacesData.races.filter(race => race.tier === 'free');
const mainRace = freeRaces[0]; // メインレース
const { raceInfo, horses } = mainRace;
---

<BaseLayout title={`AI予想分析 | ${raceInfo.title}`} description={`AI技術による${raceInfo.track}競馬${raceInfo.raceName}の詳細分析。機械学習モデルによる高精度予想を無料で提供中。`}>

<style>
    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 40px 20px;
        background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
        min-height: 100vh;
        color: #e2e8f0;
    }
    
    .header-section {
        text-align: center;
        margin-bottom: 40px;
        background: rgba(30, 41, 59, 0.8);
        border-radius: 16px;
        padding: 30px;
        border: 1px solid rgba(59, 130, 246, 0.3);
    }
    
    .race-title {
        font-size: 2.5rem;
        font-weight: 800;
        background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin-bottom: 20px;
    }
    
    .ai-metrics {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        gap: 20px;
        margin-top: 30px;
    }
    
    .metric {
        background: rgba(59, 130, 246, 0.1);
        border-radius: 12px;
        padding: 20px;
        text-align: center;
        border: 1px solid rgba(59, 130, 246, 0.3);
    }
    
    .metric-value {
        font-size: 2rem;
        font-weight: 700;
        color: #3b82f6;
        margin-bottom: 5px;
    }
    
    .metric-label {
        font-size: 0.9rem;
        color: #94a3b8;
    }
    
    .prediction-section {
        background: rgba(30, 41, 59, 0.8);
        border-radius: 16px;
        padding: 30px;
        margin-bottom: 30px;
        border: 1px solid rgba(16, 185, 129, 0.3);
    }
    
    .section-title {
        font-size: 1.8rem;
        font-weight: 700;
        color: #10b981;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
        gap: 10px;
    }
    
    .horse-card {
        background: rgba(16, 185, 129, 0.1);
        border-radius: 12px;
        padding: 20px;
        margin-bottom: 15px;
        border: 1px solid rgba(16, 185, 129, 0.3);
    }
    
    .horse-info {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 10px;
    }
    
    .horse-name {
        font-size: 1.3rem;
        font-weight: 700;
        color: #e2e8f0;
    }
    
    .horse-number {
        background: #3b82f6;
        color: white;
        padding: 5px 12px;
        border-radius: 50%;
        font-weight: 700;
    }
    
    .horse-confidence {
        color: #10b981;
        font-weight: 600;
    }
    
    .upgrade-section {
        background: linear-gradient(135deg, rgba(139, 92, 246, 0.1) 0%, rgba(59, 130, 246, 0.1) 100%);
        border-radius: 16px;
        padding: 30px;
        text-align: center;
        border: 1px solid rgba(139, 92, 246, 0.3);
    }
    
    .upgrade-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: #8b5cf6;
        margin-bottom: 15px;
    }
    
    .upgrade-btn {
        display: inline-block;
        background: linear-gradient(135deg, #8b5cf6 0%, #3b82f6 100%);
        color: white;
        padding: 15px 30px;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 600;
        margin-top: 20px;
        transition: transform 0.3s ease;
    }
    
    .upgrade-btn:hover {
        transform: translateY(-2px);
    }
</style>

<div class="container">
    <!-- ヘッダーセクション -->
    <div class="header-section">
        <h1 class="race-title">{raceInfo.title}</h1>
        <div class="ai-metrics">
            <div class="metric">
                <div class="metric-value">{raceInfo.confidence}%</div>
                <div class="metric-label">予測信頼度</div>
            </div>
            <div class="metric">
                <div class="metric-value">{raceInfo.abilityIndex}</div>
                <div class="metric-label">能力指数</div>
            </div>
            <div class="metric">
                <div class="metric-value">{raceInfo.recommendation}</div>
                <div class="metric-label">推奨度</div>
            </div>
            <div class="metric">
                <div class="metric-value">{raceInfo.expectedReturn}%</div>
                <div class="metric-label">期待回収率</div>
            </div>
        </div>
    </div>

    <!-- AI予想結果 -->
    <div class="prediction-section">
        <h2 class="section-title">
            <span>🤖</span>
            AI予想結果（無料版）
        </h2>
        
        {horses.main && (
            <div class="horse-card">
                <div class="horse-info">
                    <div class="horse-number">{horses.main.number}</div>
                    <div class="horse-name">{horses.main.name}</div>
                    <div class="horse-confidence">信頼度 {horses.main.confidence}%</div>
                </div>
                <div>本命馬 - {horses.main.type}</div>
            </div>
        )}
        
        {horses.sub1 && (
            <div class="horse-card">
                <div class="horse-info">
                    <div class="horse-number">{horses.sub1.number}</div>
                    <div class="horse-name">{horses.sub1.name}</div>
                    <div class="horse-confidence">信頼度 {horses.sub1.confidence}%</div>
                </div>
                <div>対抗馬 - {horses.sub1.type}</div>
            </div>
        )}
        
        {horses.sub2 && (
            <div class="horse-card">
                <div class="horse-info">
                    <div class="horse-number">{horses.sub2.number}</div>
                    <div class="horse-name">{horses.sub2.name}</div>
                    <div class="horse-confidence">信頼度 {horses.sub2.confidence}%</div>
                </div>
                <div>単穴馬 - {horses.sub2.type}</div>
            </div>
        )}
    </div>

    <!-- アップグレード誘導 -->
    <div class="upgrade-section">
        <div class="upgrade-title">👑 より詳細な分析をお求めですか？</div>
        <p>プレミアムプランでは全12レースの詳細分析、投資戦略、リスク分析などをご提供しています。</p>
        <a href="/pricing" class="upgrade-btn">プレミアムプランを見る</a>
    </div>
</div>

</BaseLayout>