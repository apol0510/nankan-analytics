            padding-left: 20px;
        }

        table {
            width: 100%;
            margin-top: 10px;
            border-collapse: collapse;
        }

        th {
            background: rgba(59, 130, 246, 0.1);
            color: #60a5fa;
            padding: 12px;
            text-align: left;
            font-weight: 600;
            border: 1px solid rgba(59, 130, 246, 0.3);
        }

        td {
