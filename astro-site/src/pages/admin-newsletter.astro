    function clearSuccessfulRetries(successfulEmails) {
        successfulEmails.forEach(email => {
            const allFailed = getFailedEmails();
            allFailed.forEach(item => {
                if (item.email === email.email) {
                    removeFailedEmailByKey(item.key, email.email);
                }
            });
        });
    }

