        console.log('馬番チャートを描画開始');
        const ctx = canvas.getContext('2d');

        // 馬番別データ（1-16番）
        const horseData = [14.8, 3.6, 10.7, 14.3, 10.7, 7.1, 7.1, 18.5, 0, 0, 0, 18.8, 9.1, 0, 0, 0];
