        // DOMContentLoadedまたは即時実行
        function initCharts() {
            console.log('チャート初期化開始');
            // ローディング表示を隠す
            const hideLoading = (id) => {
                const loading = document.getElementById(id);
                if (loading) loading.style.display = 'none';
            };

            // 馬番別成績グラフ
            const drawHorseChart = () => {
                const canvas = document.getElementById('horseNumberChart');
                if (!canvas) {
                    console.log('馬番チャートのcanvas要素が見つかりません');
                    return;
                }

                console.log('馬番チャートを描画開始');
                hideLoading('horseChartLoading');

                const ctx = canvas.getContext('2d');
                // 馬番別データ（1-15番のデータ）
                const winRates = [0, 0, 0, 0, 0, 0, 0, 50.0, 0, 0, 0, 50.0, 0, 0, 0];
                const fukushoRates = [50.0, 0, 50.0, 50.0, 0, 0, 0, 100.0, 0, 0, 0, 50.0, 0, 0, 0];
                const labels = ['1番', '2番', '3番', '4番', '5番', '6番', '7番', '8番', '9番', '10番', '11番', '12番', '13番', '14番', '15番'];

                // レスポンシブ対応
                const containerWidth = canvas.parentElement.offsetWidth;
                const devicePixelRatio = window.devicePixelRatio || 1;

                canvas.width = containerWidth * devicePixelRatio;
                canvas.height = 250 * devicePixelRatio;
                canvas.style.width = containerWidth + 'px';
                canvas.style.height = '250px';

                ctx.scale(devicePixelRatio, devicePixelRatio);

                const width = containerWidth;
                const height = 250;
                const padding = 40;
                const barWidth = (width - padding * 2) / winRates.length;

                // 背景
                ctx.fillStyle = '#ffffff';
                ctx.fillRect(0, 0, width, height);

                // グラフ描画
                winRates.forEach((value, index) => {
                    const barHeight = (value / 60) * (height - padding * 2);
                    const x = padding + index * barWidth + barWidth * 0.1;
                    const y = height - padding - barHeight;

                    // バーの色分け（勝率と複勝率を考慮）
                    if (value === 50.0) {
                        // 勝利馬が出た枠（8番、12番）
                        ctx.fillStyle = '#c0392b';
                    } else if (fukushoRates[index] >= 50.0) {
                        // 複勝率50%以上
                        ctx.fillStyle = '#e74c3c';
                    } else if (fukushoRates[index] > 0) {
                        // 複勝あり
                        ctx.fillStyle = '#ec7063';
                    } else {
                        // 馬券圏外
                        ctx.fillStyle = '#f5b7b1';
                    }

                    // バー描画
                    ctx.fillRect(x, y, barWidth * 0.8, barHeight || 2);

                    // 値表示（勝率がある枠と複勝率が高い枠）
                    if (value > 0 || fukushoRates[index] >= 50) {
                        ctx.fillStyle = '#2c3e50';
                        ctx.font = 'bold 10px sans-serif';
                        ctx.textAlign = 'center';
                        if (value > 0) {
                            ctx.fillText(value.toFixed(1) + '%', x + barWidth * 0.4, y - 5);
                        } else if (fukushoRates[index] >= 50) {
                            ctx.fillStyle = '#7f8c8d';
                            ctx.font = '9px sans-serif';
                            ctx.fillText('複' + fukushoRates[index] + '%', x + barWidth * 0.4, y + 15);
                        }
                    }

                    // ラベル表示
                    ctx.fillStyle = '#34495e';
                    ctx.font = '9px sans-serif';
                    ctx.textAlign = 'center';
                    ctx.save();
                    ctx.translate(x + barWidth * 0.4, height - 15);
                    ctx.rotate(-Math.PI / 6);
                    ctx.fillText(labels[index], 0, 0);
                    ctx.restore();
                });

                // 軸線
                ctx.strokeStyle = '#2c3e50';
                ctx.lineWidth = 2;
                ctx.beginPath();
                ctx.moveTo(padding, height - padding);
                ctx.lineTo(width - padding, height - padding);
                ctx.stroke();

                // タイトル
                ctx.fillStyle = '#2c3e50';
                ctx.font = 'bold 14px sans-serif';
                ctx.textAlign = 'left';
                ctx.fillText('勝率(%)', 10, 20);

                // 注記
                ctx.fillStyle = '#e74c3c';
                ctx.font = '10px sans-serif';
                ctx.fillText('※サンプル数2のため参考値', width - 160, 20);
            };

            // 人気別成績グラフ
            const drawPopularityChart = () => {
                const canvas = document.getElementById('popularityChart');
                if (!canvas) {
                    console.log('人気チャートのcanvas要素が見つかりません');
                    return;
                }

                console.log('人気チャートを描画開始');
                hideLoading('popularityChartLoading');

                const ctx = canvas.getContext('2d');
                const popularityData = [50.0, 0, 50.0, 0, 0, 0];
                const rentaiData = [50.0, 0, 50.0, 0, 0, 11.8]; // 連対率データ
                const fukushoData = [50.0, 50.0, 50.0, 0, 50.0, 11.8]; // 複勝率データ
                const popLabels = ['1番人気', '2番人気', '3番人気', '4番人気', '5番人気', '6番人気以下'];

                // レスポンシブ対応
                const containerWidth = canvas.parentElement.offsetWidth;
                const devicePixelRatio = window.devicePixelRatio || 1;

                canvas.width = containerWidth * devicePixelRatio;
                canvas.height = 250 * devicePixelRatio;
                canvas.style.width = containerWidth + 'px';
                canvas.style.height = '250px';

                ctx.scale(devicePixelRatio, devicePixelRatio);

                const width = containerWidth;
                const height = 250;
                const padding = 40;
                const barWidth = (width - padding * 2) / popularityData.length;

                // 背景
                ctx.fillStyle = '#ffffff';
                ctx.fillRect(0, 0, width, height);

                // グラフ描画
                popularityData.forEach((value, index) => {
                    const barHeight = (value / 60) * (height - padding * 2);
                    const x = padding + index * barWidth + barWidth * 0.15;
                    const y = height - padding - barHeight;

                    // バーの色分け
                    if (index === 0 || index === 2) {
                        // 1番人気と3番人気（勝利あり）
                        const gradient = ctx.createLinearGradient(0, y, 0, height - padding);
                        gradient.addColorStop(0, '#c0392b');
                        gradient.addColorStop(1, '#e74c3c');
                        ctx.fillStyle = gradient;
                    } else if (index === 5 && rentaiData[index] > 0) {
                        // 6番人気以下（連対あり）
                        ctx.fillStyle = '#f39c12';
                    } else if (fukushoData[index] >= 50) {
                        // 複勝率50%以上
                        ctx.fillStyle = '#ec7063';
                    } else {
                        // その他
                        ctx.fillStyle = '#f5b7b1';
                    }

                    // バー描画
                    ctx.fillRect(x, y, barWidth * 0.7, barHeight || 2);

                    // 値表示
                    if (value > 0) {
                        ctx.fillStyle = '#2c3e50';
                        ctx.font = 'bold 11px sans-serif';
                        ctx.textAlign = 'center';
                        ctx.fillText(value.toFixed(1) + '%', x + barWidth * 0.35, y - 5);
                    }

                    // 6番人気以下の連対率表示
                    if (index === 5 && rentaiData[index] > 0) {
                        ctx.fillStyle = '#e67e22';
                        ctx.font = 'bold 10px sans-serif';
                        ctx.fillText('連対11.8%', x + barWidth * 0.35, y + 20);
                    }

                    // ラベル表示
                    ctx.fillStyle = '#34495e';
                    ctx.font = '9px sans-serif';
                    ctx.fillText(popLabels[index], x + barWidth * 0.35, height - 20);
                });

                // 軸線
                ctx.strokeStyle = '#2c3e50';
                ctx.lineWidth = 2;
                ctx.beginPath();
                ctx.moveTo(padding, height - padding);
                ctx.lineTo(width - padding, height - padding);
                ctx.stroke();

                // タイトル
                ctx.fillStyle = '#2c3e50';
                ctx.font = 'bold 14px sans-serif';
                ctx.textAlign = 'left';
                ctx.fillText('勝率(%)', 10, 20);

                // 警告注記
                ctx.fillStyle = '#e74c3c';
                ctx.font = 'bold 11px sans-serif';
                ctx.fillText('⚠️ 最長距離2600m', width - 130, 20);
            };

            // グラフを描画
            drawHorseChart();
            drawPopularityChart();

            // リサイズ対応
            let resizeTimer;
            window.addEventListener('resize', () => {
                clearTimeout(resizeTimer);
                resizeTimer = setTimeout(() => {
                    drawHorseChart();
                    drawPopularityChart();
                }, 250);
            });
        }

        // 複数の実行タイミングに対応
        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', initCharts);
        } else {
            initCharts();
        }

        // Astroのページ遷移対応
        document.addEventListener('astro:page-load', initCharts);
    </script>
