    <script is:inline>
        // グラフ描画関数
        function initCharts() {
            // 馬番別勝率グラフ
            const drawHorseChart = () => {
                const canvas = document.getElementById('horseNumberChart');
                if (!canvas) return;

                const ctx = canvas.getContext('2d');
                const winRates = [9.7, 8.7, 13.7, 10.1, 7.5, 7.2, 8.2, 10.3, 13.4, 12.0, 6.8, 7.4];
                const labels = ['1番', '2番', '3番', '4番', '5番', '6番', '7番', '8番', '9番', '10番', '11番', '12番'];

                // キャンバスサイズ設定
                const containerWidth = canvas.parentElement.offsetWidth;
                const devicePixelRatio = window.devicePixelRatio || 1;

                canvas.width = containerWidth * devicePixelRatio;
                canvas.height = 250 * devicePixelRatio;
                canvas.style.width = containerWidth + 'px';
                canvas.style.height = '250px';

                ctx.scale(devicePixelRatio, devicePixelRatio);

                const width = containerWidth;
                const height = 250;
                const padding = 40;
                const barWidth = (width - padding * 2) / winRates.length;

                // 背景
                ctx.fillStyle = '#ffffff';
                ctx.fillRect(0, 0, width, height);

                // バー描画
                winRates.forEach((value, index) => {
                    const barHeight = (value / 15) * (height - padding * 2);
                    const x = padding + index * barWidth + barWidth * 0.1;
                    const y = height - padding - barHeight;

                    // バーの色分け
                    if (index === 2) { // 3番枠（最高勝率）
                        ctx.fillStyle = '#667eea';
                    } else if (index === 8) { // 9番枠（2位）
                        ctx.fillStyle = '#764ba2';
                    } else if (index === 9) { // 10番枠（3位）
                        ctx.fillStyle = '#9575cd';
                    } else if (index === 0 || index === 3 || index === 7) { // 好成績枠
                        ctx.fillStyle = '#b39ddb';
                    } else if (value < 8) { // 低勝率
                        ctx.fillStyle = '#e0e0e0';
                    } else {
                        ctx.fillStyle = '#d1c4e9';
                    }

                    ctx.fillRect(x, y, barWidth * 0.8, barHeight || 2);

                    // 値表示（上位のみ）
                    if (index === 2 || index === 8 || index === 9) {
                        ctx.fillStyle = '#2c3e50';
                        ctx.font = 'bold 10px sans-serif';
                        ctx.textAlign = 'center';
                        ctx.fillText(value.toFixed(1) + '%', x + barWidth * 0.4, y - 5);
                    }

                    // ラベル
                    ctx.fillStyle = '#34495e';
                    ctx.font = '9px sans-serif';
                    ctx.textAlign = 'center';
                    ctx.save();
                    ctx.translate(x + barWidth * 0.4, height - 15);
                    ctx.rotate(-Math.PI / 6);
                    ctx.fillText(labels[index], 0, 0);
                    ctx.restore();
                });

                // 軸線
                ctx.strokeStyle = '#2c3e50';
                ctx.lineWidth = 2;
                ctx.beginPath();
                ctx.moveTo(padding, height - padding);
                ctx.lineTo(width - padding, height - padding);
                ctx.stroke();

                // タイトル
                ctx.fillStyle = '#2c3e50';
                ctx.font = 'bold 14px sans-serif';
                ctx.textAlign = 'left';
                ctx.fillText('勝率(%)', 10, 20);
            };

            // 人気別成績グラフ
            const drawPopularityChart = () => {
                const canvas = document.getElementById('popularityChart');
                if (!canvas) return;

                const ctx = canvas.getContext('2d');
                const winData = [42.5, 23.1, 12.6, 9.1, 2.9, 1.8];
                const fukushoData = [76.0, 58.4, 48.2, 34.2, 23.8, 11.3];
                const labels = ['1番人気', '2番人気', '3番人気', '4番人気', '5番人気', '6番人気以下'];

                // キャンバスサイズ設定
                const containerWidth = canvas.parentElement.offsetWidth;
                const devicePixelRatio = window.devicePixelRatio || 1;

                canvas.width = containerWidth * devicePixelRatio;
                canvas.height = 320 * devicePixelRatio;
                canvas.style.width = containerWidth + 'px';
                canvas.style.height = '320px';

                ctx.scale(devicePixelRatio, devicePixelRatio);

                const width = containerWidth;
                const height = 320;
                const padding = 50; // パディングを増やしてラベル用スペース確保
                const barWidth = (width - padding * 2) / winData.length;

                // 背景
                ctx.fillStyle = '#ffffff';
                ctx.fillRect(0, 0, width, height);

                // 勝率バー描画
                winData.forEach((value, index) => {
                    const barHeight = (value / 50) * (height - padding * 2);
                    const x = padding + index * barWidth + barWidth * 0.15;
                    const y = height - padding - barHeight;

                    // グラデーション
                    if (index === 0) {
                        const gradient = ctx.createLinearGradient(0, y, 0, height - padding);
                        gradient.addColorStop(0, '#667eea');
                        gradient.addColorStop(1, '#764ba2');
                        ctx.fillStyle = gradient;
                    } else if (index === 1) {
                        ctx.fillStyle = '#9575cd';
                    } else if (index === 2) {
                        ctx.fillStyle = '#b39ddb';
                    } else if (index === 5) {
                        ctx.fillStyle = '#e0e0e0';
                    } else {
                        ctx.fillStyle = '#d1c4e9';
                    }

                    ctx.fillRect(x, y, barWidth * 0.7, barHeight || 2);

                    // 値表示
                    ctx.fillStyle = '#2c3e50';
                    ctx.font = 'bold 11px sans-serif';
                    ctx.textAlign = 'center';
                    ctx.fillText(value.toFixed(1) + '%', x + barWidth * 0.35, y - 5);

                    // 複勝率表示（小さく）
                    ctx.font = '9px sans-serif';
                    ctx.fillStyle = '#7f8c8d';
                    ctx.fillText('複' + fukushoData[index].toFixed(1) + '%', x + barWidth * 0.35, y + barHeight + 15);

                    // ラベル（人気）
                    ctx.fillStyle = '#34495e';
                    ctx.font = '11px sans-serif';
                    ctx.textAlign = 'center';
                    ctx.save();
                    ctx.translate(x + barWidth * 0.35, height - 15);
                    if (containerWidth < 700) {
                        // 小さい画面では45度回転
                        ctx.rotate(-Math.PI / 4);
                    } else {
                        // 大きい画面では20度回転
                        ctx.rotate(-Math.PI / 9);
                    }
                    ctx.fillText(labels[index], 0, 0);
                    ctx.restore();
                });

                // 軸線
                ctx.strokeStyle = '#2c3e50';
                ctx.lineWidth = 2;
                ctx.beginPath();
                ctx.moveTo(padding, height - padding);
                ctx.lineTo(width - padding, height - padding);
                ctx.stroke();

                // タイトル
                ctx.fillStyle = '#2c3e50';
                ctx.font = 'bold 14px sans-serif';
                ctx.textAlign = 'left';
                ctx.fillText('勝率・複勝率(%)', 10, 20);
            };

            // チャート描画実行
            drawHorseChart();
            drawPopularityChart();

            // リサイズ対応
            let resizeTimer;
            window.addEventListener('resize', () => {
                clearTimeout(resizeTimer);
                resizeTimer = setTimeout(() => {
                    drawHorseChart();
                    drawPopularityChart();
                }, 250);
            });
        }

        // DOMロード後に実行
        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', initCharts);
        } else {
            initCharts();
        }

        // トップへ戻るボタン
        window.addEventListener('scroll', function() {
            const backToTop = document.getElementById('backToTop');
            if (window.pageYOffset > 300) {
                backToTop.classList.add('visible');
            } else {
                backToTop.classList.remove('visible');
            }
        });

        document.getElementById('backToTop').addEventListener('click', function(e) {
            e.preventDefault();
            window.scrollTo({
                top: 0,
                behavior: 'smooth'
            });
        });
    </script>
