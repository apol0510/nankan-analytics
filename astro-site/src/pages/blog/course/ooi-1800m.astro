                    } else if (value > 10) {
                        // 10%以上
                        ctx.fillStyle = '#5dade2';
                    } else if (value > 5) {
                        // 5%以上
                        ctx.fillStyle = '#85c1e2';
                    } else if (value === 0) {
                        // 0%
                        ctx.fillStyle = '#7f8c8d';
