    <script is:inline>
        function initCharts() {
            console.log('川崎900mチャート初期化開始');

            const hideLoading = (id) => {
                const loading = document.getElementById(id);
                if (loading) loading.style.display = 'none';
            };

            // 馬番別勝率グラフ
            const drawHorseChart = () => {
                const canvas = document.getElementById('horseNumberChart');
                if (!canvas) {
                    console.log('馬番チャートのcanvas要素が見つかりません');
                    return;
                }

                console.log('馬番チャートを描画開始');
                hideLoading('horseChartLoading');

                const ctx = canvas.getContext('2d');
                const winRates = [8.2, 10.7, 10.1, 14.1, 12.2, 7.3, 6.1, 9.9, 6.5, 9.1, 7.9, 6.7];
                const fukushoRates = [34.7, 29.5, 32.4, 35.6, 35.8, 22.5, 24.3, 21.3, 19.6, 28.1, 24.6, 16.7];
                const labels = ['1番', '2番', '3番', '4番', '5番', '6番', '7番', '8番', '9番', '10番', '11番', '12番'];

                const containerWidth = canvas.parentElement.offsetWidth;
                const devicePixelRatio = window.devicePixelRatio || 1;

                canvas.width = containerWidth * devicePixelRatio;
                canvas.height = 250 * devicePixelRatio;
                canvas.style.width = containerWidth + 'px';
                canvas.style.height = '250px';

                ctx.scale(devicePixelRatio, devicePixelRatio);

                const width = containerWidth;
                const height = 250;
                const padding = 40;
                const barWidth = (width - padding * 2) / winRates.length;

                ctx.fillStyle = '#ffffff';
                ctx.fillRect(0, 0, width, height);

                winRates.forEach((value, index) => {
                    const barHeight = (value / 15) * (height - padding * 2);
                    const x = padding + index * barWidth + barWidth * 0.1;
                    const y = height - padding - barHeight;

                    if (index === 3) {
                        ctx.fillStyle = '#ff5722';
                    } else if (index === 4) {
                        ctx.fillStyle = '#ff7043';
                    } else if (index === 1 || index === 2) {
                        ctx.fillStyle = '#ff8a65';
                    } else if (index === 0) {
                        ctx.fillStyle = '#ffab91';
                    } else if (value < 7) {
                        ctx.fillStyle = '#ffcdd2';
                    } else {
                        ctx.fillStyle = '#ffccbc';
                    }

                    ctx.fillRect(x, y, barWidth * 0.8, barHeight || 2);

                    if (index === 3 || index === 4 || index === 1 || index === 0) {
                        ctx.fillStyle = '#2c3e50';
                        ctx.font = 'bold 10px sans-serif';
                        ctx.textAlign = 'center';
                        ctx.fillText(value.toFixed(1) + '%', x + barWidth * 0.4, y - 5);
                    }

                    ctx.fillStyle = '#34495e';
                    ctx.font = '9px sans-serif';
                    ctx.textAlign = 'center';
                    ctx.save();
                    ctx.translate(x + barWidth * 0.4, height - 15);
                    ctx.rotate(-Math.PI / 6);
                    ctx.fillText(labels[index], 0, 0);
                    ctx.restore();
                });

                ctx.strokeStyle = '#2c3e50';
                ctx.lineWidth = 2;
                ctx.beginPath();
                ctx.moveTo(padding, height - padding);
                ctx.lineTo(width - padding, height - padding);
                ctx.stroke();

                ctx.fillStyle = '#2c3e50';
                ctx.font = 'bold 14px sans-serif';
                ctx.textAlign = 'left';
                ctx.fillText('勝率(%)', 10, 20);

                ctx.fillStyle = '#ff5722';
                ctx.font = '10px sans-serif';
                ctx.fillText('※内枠優位', width - 90, 20);
            };

            // 人気別成績グラフ
            const drawPopularityChart = () => {
                const canvas = document.getElementById('popularityChart');
                if (!canvas) {
                    console.log('人気チャートのcanvas要素が見つかりません');
                    return;
                }

                console.log('人気チャートを描画開始');
                hideLoading('popularityChartLoading');

                const ctx = canvas.getContext('2d');
                const popularityData = [47.3, 14.7, 10.7, 10.0, 8.7, 1.5];
                const fukushoData = [80.0, 54.0, 40.7, 36.0, 27.3, 10.4];
                const popLabels = ['1番人気', '2番人気', '3番人気', '4番人気', '5番人気', '6番人気以下'];

                const containerWidth = canvas.parentElement.offsetWidth;
                const devicePixelRatio = window.devicePixelRatio || 1;

                canvas.width = containerWidth * devicePixelRatio;
                canvas.height = 250 * devicePixelRatio;
                canvas.style.width = containerWidth + 'px';
                canvas.style.height = '250px';

                ctx.scale(devicePixelRatio, devicePixelRatio);

                const width = containerWidth;
                const height = 250;
                const padding = 40;
                const barWidth = (width - padding * 2) / popularityData.length;

                ctx.fillStyle = '#ffffff';
                ctx.fillRect(0, 0, width, height);

                popularityData.forEach((value, index) => {
                    const barHeight = (value / 50) * (height - padding * 2);
                    const x = padding + index * barWidth + barWidth * 0.15;
                    const y = height - padding - barHeight;

                    if (index === 0) {
                        const gradient = ctx.createLinearGradient(0, y, 0, height - padding);
                        gradient.addColorStop(0, '#ff5722');
                        gradient.addColorStop(1, '#ff7043');
                        ctx.fillStyle = gradient;
                    } else if (index === 1) {
                        ctx.fillStyle = '#ff8a65';
                    } else if (index === 2) {
                        ctx.fillStyle = '#ffab91';
                    } else if (index === 5) {
                        ctx.fillStyle = '#e0e0e0';
                    } else {
                        ctx.fillStyle = '#ffccbc';
                    }

                    ctx.fillRect(x, y, barWidth * 0.7, barHeight || 2);

                    ctx.fillStyle = '#2c3e50';
                    ctx.font = 'bold 11px sans-serif';
                    ctx.textAlign = 'center';
                    ctx.fillText(value.toFixed(1) + '%', x + barWidth * 0.35, y - 5);

                    if (index === 0) {
                        ctx.fillStyle = '#ff5722';
                        ctx.font = 'bold 10px sans-serif';
                        ctx.fillText('複勝80.0%', x + barWidth * 0.35, y - 20);
                    } else if (index === 1) {
                        ctx.fillStyle = '#ff6f00';
                        ctx.font = 'bold 9px sans-serif';
                        ctx.fillText('複' + fukushoData[index].toFixed(1) + '%', x + barWidth * 0.35, y - 20);
                    }

                    ctx.fillStyle = '#34495e';
                    ctx.font = '9px sans-serif';
                    ctx.fillText(popLabels[index], x + barWidth * 0.35, height - 20);
                });

                ctx.strokeStyle = '#2c3e50';
                ctx.lineWidth = 2;
                ctx.beginPath();
                ctx.moveTo(padding, height - padding);
                ctx.lineTo(width - padding, height - padding);
                ctx.stroke();

                ctx.fillStyle = '#2c3e50';
                ctx.font = 'bold 14px sans-serif';
                ctx.textAlign = 'left';
                ctx.fillText('勝率(%)', 10, 20);
            };

            drawHorseChart();
