                        const y = padding + (chartHeight / 10) * i;
                        ctx2.beginPath();
                        ctx2.moveTo(padding, y);
                        ctx2.lineTo(width - padding, y);
                        ctx2.stroke();

                        // Y軸ラベル
                        ctx2.fillStyle = '#9ca3af';
                        ctx2.font = '12px sans-serif';
                        ctx2.textAlign = 'right';
                        ctx2.fillText(`${(10 - i) * 10}%`, padding - 10, y + 4);
                    }

                    // 人気ごとのバー
                    const barWidth = chartWidth / popularityData.popularity.length * 0.8;
                    const barSpacing = chartWidth / popularityData.popularity.length;

                    popularityData.popularity.forEach((pop, index) => {
                        const winRate = popularityData.winRates[index];
                        const placeRate = popularityData.placeRates[index];

                        const x = padding + barSpacing * index + (barSpacing - barWidth) / 2;
                        const winHeight = (winRate / 100) * chartHeight;
                        const placeHeight = (placeRate / 100) * chartHeight;

                        // 複勝率バー（背景）
                        ctx2.fillStyle = '#10b981';
                        ctx2.fillRect(x, height - padding - placeHeight, barWidth * 0.6, placeHeight);

                        // 勝率バー（前景）
                        ctx2.fillStyle = '#f59e0b';
                        ctx2.fillRect(x, height - padding - winHeight, barWidth * 0.6, winHeight);

                        // 人気ラベル
                        ctx2.fillStyle = '#f1f5f9';
                        ctx2.font = '10px sans-serif';
                        ctx2.textAlign = 'center';
                        ctx2.save();
                        ctx2.translate(x + barWidth * 0.3, height - padding + 30);
                        ctx2.rotate(-Math.PI / 6);
                        ctx2.fillText(pop, 0, 0);
                        ctx2.restore();

