                    // 馬番ごとのバー
                    const barWidth = chartWidth / horseData.numbers.length * 0.8;
                    const barSpacing = chartWidth / horseData.numbers.length;

                    horseData.numbers.forEach((number, index) => {
                        const winRate = horseData.winRates[index];
                        const placeRate = horseData.placeRates[index];

                        const x = padding + barSpacing * index + (barSpacing - barWidth) / 2;
                        const winHeight = (winRate / 50) * chartHeight;
                        const placeHeight = (placeRate / 50) * chartHeight;

                        // 複勝率バー（背景）
                        ctx.fillStyle = '#3b82f6';
                        ctx.fillRect(x, height - padding - placeHeight, barWidth * 0.7, placeHeight);

                        // 勝率バー（前景）
                        ctx.fillStyle = '#ef4444';
                        ctx.fillRect(x, height - padding - winHeight, barWidth * 0.7, winHeight);

                        // 馬番ラベル
