---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="料金プラン">
    <main class="container mx-auto px-4 py-12">
        <h1 class="text-3xl font-bold mb-6">プラン選択</h1>
        <div class="grid md:grid-cols-2 gap-6">
            <div class="p-6 rounded-xl bg-slate-800">
                <h2 class="text-xl font-semibold mb-2">スタンダード</h2>
                <p class="mb-4 opacity-80">基本の予想</p>
                <button type="button" data-subscribe data-plan="standard"
                    class="px-4 py-2 rounded-lg bg-blue-500 hover:bg-blue-600">
                    スタンダードを始める
                </button>
            </div>
            <div class="p-6 rounded-xl bg-slate-800">
                <h2 class="text-xl font-semibold mb-2">プレミアム</h2>
                <p class="mb-4 opacity-80">より的確な予想</p>
                <button type="button" data-subscribe data-plan="premium"
                    class="px-4 py-2 rounded-lg bg-purple-500 hover:bg-purple-600">
                    プレミアムを始める
                </button>
            </div>
        </div>
    </main>

    <!-- ✅ 自作の外部JSのみ -->
    <script src="/js/pricing-checkout.js" defer></script>
</BaseLayout>