---
export const prerender = true;
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="料金プラン - NANKANアナリティクス">
    <div class="pricing-page">
        <!-- ヘッダー -->
        <div class="pricing-header">
            <h1 class="pricing-title">
                🚀 <span class="gradient-text">AI予想で勝つ</span>
            </h1>
            <p class="pricing-subtitle">
                南関競馬専門のAI予想システム。あなたのスタイルに合わせたプランをお選びください。
            </p>
        </div>

        <!-- プラン比較カード -->
        <div class="plans-container">
            <!-- 無料プラン -->
            <div class="plan-card">
                <div class="plan-header">
                    <h3 class="plan-name">無料プラン</h3>
                    <div class="plan-price">
                        <span class="price-amount">¥0</span>
                        <span class="price-period">/月</span>
                    </div>
                    <p class="plan-description">お試ししたい方に</p>
                </div>

                <ul class="plan-features">
                    <li class="feature-item">
                        <span class="check-icon">✓</span>
                        <span>無料予想</span>
                    </li>
                    <li class="feature-item">
                        <span class="check-icon">✓</span>
                        <span>基本的な競馬情報</span>
                    </li>
                    <li class="feature-item">
                        <span class="check-icon">✓</span>
                        <span>予想結果の確認</span>
                    </li>
                    <li class="feature-item">
                        <span class="check-icon">✓</span>
                        <span>ログインポイント1pt</span>
                    </li>
                </ul>

                <a href="/free-signup/" class="plan-button plan-button-free">
                    無料会員登録
                </a>
            </div>

            <!-- プレミアムプラン（中央に配置） -->
            <div class="plan-card plan-card-recommended">
                <!-- 人気バッジ -->
                <div class="recommended-badge">
                    <span>おすすめ</span>
                </div>

                <div class="plan-header">
                    <h3 class="plan-name">プレミアム</h3>
                    <div class="plan-price">
                        <span class="price-amount">¥9,980</span>
                        <span class="price-period">/月</span>
                    </div>
                    <p class="plan-description">全レース制覇を目指す方に</p>
                </div>

                <ul class="plan-features">
                    <li class="feature-item">
                        <span class="check-icon">✓</span>
                        <span><strong>全レース（1R〜12R）の予想</strong></span>
                    </li>
                    <li class="feature-item">
                        <span class="check-icon">✓</span>
                        <span>高精度AI予想</span>
                    </li>
                    <li class="feature-item">
                        <span class="check-icon">✓</span>
                        <span>詳細な投資戦略</span>
                    </li>
                    <li class="feature-item">
                        <span class="check-icon">✓</span>
                        <span>優先サポート</span>
                    </li>
                    <li class="feature-item">
                        <span class="check-icon">✓</span>
                        <span>ログインポイント30pt</span>
                    </li>
                </ul>

                <a href="https://buy.stripe.com/5kQ8wP0ulcAMggzgVldby0M" class="plan-button plan-button-premium">
                    プレミアムプランを始める
                </a>
            </div>

            <!-- スタンダードプラン -->
            <div class="plan-card">
                <div class="plan-header">
                    <h3 class="plan-name">スタンダード</h3>
                    <div class="plan-price">
                        <span class="price-amount">¥5,980</span>
                        <span class="price-period">/月</span>
                    </div>
                    <p class="plan-description">後半戦で勝負したい方に</p>
                </div>

                <ul class="plan-features">
                    <li class="feature-item">
                        <span class="check-icon">✓</span>
                        <span>後半3レース（10R、11R、12R）</span>
                    </li>
                    <li class="feature-item">
                        <span class="check-icon">✓</span>
                        <span>高精度AI予想</span>
                    </li>
                    <li class="feature-item">
                        <span class="check-icon">✓</span>
                        <span>詳細な投資戦略</span>
                    </li>
                    <li class="feature-item">
                        <span class="check-icon">✓</span>
                        <span>優先サポート</span>
                    </li>
                    <li class="feature-item">
                        <span class="check-icon">✓</span>
                        <span>ログインポイント10pt</span>
                    </li>
                </ul>

                <a href="https://buy.stripe.com/4gMeVd3Gx1W85BV0Wndby0L" class="plan-button plan-button-standard">
                    スタンダードプランを始める
                </a>
            </div>

            <!-- Premium Sanrenpuku -->
            <div class="plan-card" id="sanrenpuku">
                <div class="new-badge-container">
                    <span class="new-badge-label">NEW</span>
                </div>

                <div class="plan-header">
                    <h3 class="plan-name">Premium 三連複</h3>
                    <div class="plan-price">
                        <span class="price-amount">¥19,820</span>
                        <span class="price-period">/月</span>
                    </div>
                    <p class="plan-description">買い目を絞りたい方に</p>
                </div>

                <ul class="plan-features">
                    <li class="feature-item">
                        <span class="check-icon">✓</span>
                        <span><strong>全レース（1R〜12R）三連複買い目</strong></span>
                    </li>
                    <li class="feature-item">
                        <span class="check-icon">✓</span>
                        <span>AI自動絞り込み（7〜9点）</span>
                    </li>
                    <li class="feature-item">
                        <span class="check-icon">✓</span>
                        <span>過去1年間 的中率78% 回収率178%</span>
                    </li>
                    <li class="feature-item">
                        <span class="check-icon">✓</span>
                        <span>馬単より当てやすい</span>
                    </li>
                    <li class="feature-item">
                        <span class="check-icon">✓</span>
                        <span>優先サポート</span>
                    </li>
                    <li class="feature-item">
                        <span class="check-icon">✓</span>
                        <span>ログインポイント30pt</span>
                    </li>
                </ul>

                <a href="#" class="plan-button plan-button-sanrenpuku">
                    Premium 三連複を始める
                </a>
                <p class="plan-note">※ Stripe Payment Link準備中</p>
            </div>

            <!-- Premium Full -->
            <div class="plan-card">
                <div class="premium-full-badge">
                    <span>最上位</span>
                </div>

                <div class="plan-header">
                    <h3 class="plan-name">Premium Full</h3>
                    <div class="plan-price">
                        <span class="price-amount">¥24,800</span>
                        <span class="price-period">/月</span>
                    </div>
                    <p class="plan-description">馬単+三連複 完全網羅</p>
                </div>

                <ul class="plan-features">
                    <li class="feature-item">
                        <span class="check-icon">✓</span>
                        <span><strong>全レース馬単予想（3戦略）</strong></span>
                    </li>
                    <li class="feature-item">
                        <span class="check-icon">✓</span>
                        <span><strong>全レース三連複買い目</strong></span>
                    </li>
                    <li class="feature-item">
                        <span class="check-icon">✓</span>
                        <span>両方の予想を同時に利用可能</span>
                    </li>
                    <li class="feature-item">
                        <span class="check-icon">✓</span>
                        <span>最大限の選択肢で勝率アップ</span>
                    </li>
                    <li class="feature-item">
                        <span class="check-icon">✓</span>
                        <span>最優先サポート</span>
                    </li>
                    <li class="feature-item">
                        <span class="check-icon">✓</span>
                        <span>ログインポイント50pt</span>
                    </li>
                </ul>

                <a href="#" class="plan-button plan-button-full">
                    Premium Fullを始める
                </a>
                <p class="plan-note">※ Stripe Payment Link準備中</p>
            </div>
        </div>

        <!-- FAQ -->
        <div class="faq-section">
            <h2 class="faq-title">よくある質問</h2>
            
            <div class="faq-container">
                <div class="faq-item">
                    <h3 class="faq-question">Q: 無料プランでも予想は見れますか？</h3>
                    <p class="faq-answer">
                        はい。無料プランでも全レースの無料予想をご利用いただけます。
                    </p>
                </div>

                <div class="faq-item">
                    <h3 class="faq-question">Q: ログインポイントについて教えてください</h3>
                    <p class="faq-answer">
                        毎日ログインすることでポイントが付与されます。<br><br>
                        <strong>【ポイント付与】</strong><br>
                        ・無料会員：1pt / 日<br>
                        ・スタンダード会員：10pt / 日<br>
                        ・プレミアム会員：30pt / 日<br><br>
                        <strong>【ポイント利用】</strong><br>
                        貯めたポイントで特別限定予想と交換可能です。
                    </p>
                </div>

                <div class="faq-item">
                    <h3 class="faq-question">Q: 支払い方法は何が利用できますか？</h3>
                    <p class="faq-answer">
                        クレジットカード（Visa、MasterCard、JCB、American Express）がご利用いただけます。
                    </p>
                </div>

                <div class="faq-item">
                    <h3 class="faq-question">Q: 利用期間について教えてください</h3>
                    <p class="faq-answer">
                        月額制のサブスクリプションサービスです。初回決済日から1ヶ月ごとに自動更新されます。解約申請をされない限り、継続してご利用いただけます。
                    </p>
                </div>

                <div class="faq-item">
                    <h3 class="faq-question">Q: 解約はいつでもできますか？</h3>
                    <p class="faq-answer">
                        はい。マイページからいつでも解約申請が可能です。解約処理完了後も、有効期限内は引き続きサービスをご利用いただけます。
                    </p>
                </div>

                <div class="faq-item">
                    <h3 class="faq-question">Q: 解約方法を教えてください</h3>
                    <p class="faq-answer">
                        マイページの「退会処理」ボタンから解約申請を行ってください。<br><br>
                        <strong>※ 解約後について</strong><br>
                        ・解約処理完了後も有効期限内は引き続きサービスをご利用いただけます<br>
                        ・解約手数料は一切かかりません<br>
                        ・再登録もいつでも可能です
                    </p>
                </div>
            </div>
        </div>
    </div>
</BaseLayout>

<!-- Payment LinksはStripeが全て処理するため、JavaScriptは不要 -->

<style>
    .pricing-page {
        min-height: 100vh;
        background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
        color: #e2e8f0;
        padding: 2rem 1rem;
    }

    /* ヘッダー */
    .pricing-header {
        text-align: center;
        margin-bottom: 4rem;
        max-width: 800px;
        margin-left: auto;
        margin-right: auto;
    }

    .pricing-title {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 1rem;
    }

    .gradient-text {
        background: linear-gradient(to right, #3b82f6, #8b5cf6);
        background-clip: text;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        color: transparent;
    }

    .pricing-subtitle {
        font-size: 1.25rem;
        color: #94a3b8;
        line-height: 1.6;
    }

    /* プランカード */
    .plans-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
        max-width: 1200px;
        margin: 0 auto 5rem auto;
    }

    .plan-card {
        background: rgba(30, 41, 59, 0.8);
        border-radius: 1.5rem;
        padding: 2rem;
        border: 1px solid rgba(51, 65, 85, 0.5);
        position: relative;
        transition: all 0.3s ease;
        backdrop-filter: blur(10px);
    }

    .plan-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
        border-color: rgba(59, 130, 246, 0.5);
    }

    .plan-card-recommended {
        border: 2px solid #3b82f6;
        transform: scale(1.05);
        background: rgba(59, 130, 246, 0.1);
    }

    .recommended-badge {
        position: absolute;
        top: -1rem;
        left: 50%;
        transform: translateX(-50%);
        background: #3b82f6;
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 9999px;
        font-size: 0.875rem;
        font-weight: 600;
    }

    /* プランヘッダー */
    .plan-header {
        text-align: center;
        margin-bottom: 2rem;
    }

    .plan-name {
        font-size: 1.5rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
    }

    .plan-price {
        margin-bottom: 1rem;
    }

    .price-amount {
        font-size: 2.5rem;
        font-weight: 700;
        color: #f1f5f9;
    }

    .price-period {
        color: #94a3b8;
        font-size: 1rem;
    }

    .plan-description {
        color: #94a3b8;
        font-size: 1rem;
    }

    /* 機能リスト */
    .plan-features {
        list-style: none;
        margin: 0 0 2rem 0;
        padding: 0;
    }

    .feature-item {
        display: flex;
        align-items: flex-start;
        margin-bottom: 1rem;
        gap: 0.75rem;
    }

    .check-icon {
        color: #10b981;
        font-weight: 700;
        flex-shrink: 0;
        margin-top: 0.125rem;
    }

    /* ボタン */
    .plan-button {
        width: 100%;
        padding: 0.875rem 1.5rem;
        border-radius: 0.5rem;
        font-weight: 600;
        font-size: 1rem;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        display: block;
        text-align: center;
        border: none;
    }

    .plan-button:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
    }

    .plan-button-free {
        background: #475569;
        color: #e2e8f0;
        border: 2px solid #64748b;
        box-shadow: 0 4px 15px rgba(71, 85, 105, 0.4);
    }

    .plan-button-free:hover {
        background: #64748b;
        border-color: #74859a;
        box-shadow: 0 8px 25px rgba(71, 85, 105, 0.6);
    }

    .plan-button-standard {
        background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
        color: white;
        border: 2px solid #3b82f6;
        box-shadow: 0 4px 15px rgba(59, 130, 246, 0.4);
    }

    .plan-button-standard:hover {
        background: linear-gradient(135deg, #1d4ed8 0%, #1e40af 100%);
        border-color: #1d4ed8;
        box-shadow: 0 8px 25px rgba(59, 130, 246, 0.6);
    }

    .plan-button-premium {
        background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%);
        color: white;
        border: 2px solid #8b5cf6;
        box-shadow: 0 4px 15px rgba(139, 92, 246, 0.4);
    }

    .plan-button-premium:hover {
        background: linear-gradient(135deg, #7c3aed 0%, #6d28d9 100%);
        border-color: #7c3aed;
        box-shadow: 0 8px 25px rgba(139, 92, 246, 0.6);
    }

    .plan-button-sanrenpuku {
        background: linear-gradient(135deg, #f59e0b 0%, #ea580c 100%);
        color: white;
        border: 2px solid #f59e0b;
        box-shadow: 0 4px 15px rgba(245, 158, 11, 0.4);
    }

    .plan-button-sanrenpuku:hover {
        background: linear-gradient(135deg, #ea580c 0%, #dc2626 100%);
        border-color: #ea580c;
        box-shadow: 0 8px 25px rgba(245, 158, 11, 0.6);
    }

    .plan-button-full {
        background: linear-gradient(135deg, #fbbf24 0%, #f59e0b 100%);
        color: #0f172a;
        border: 2px solid #fbbf24;
        box-shadow: 0 4px 15px rgba(251, 191, 36, 0.4);
        font-weight: 700;
    }

    .plan-button-full:hover {
        background: linear-gradient(135deg, #f59e0b 0%, #ea580c 100%);
        border-color: #f59e0b;
        box-shadow: 0 8px 25px rgba(251, 191, 36, 0.6);
    }

    /* NEWバッジ */
    .new-badge-container {
        position: absolute;
        top: -1rem;
        left: 50%;
        transform: translateX(-50%);
        background: linear-gradient(135deg, #f59e0b 0%, #ea580c 100%);
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 9999px;
        font-size: 0.875rem;
        font-weight: 600;
        box-shadow: 0 4px 15px rgba(245, 158, 11, 0.4);
    }

    /* 最上位バッジ */
    .premium-full-badge {
        position: absolute;
        top: -1rem;
        left: 50%;
        transform: translateX(-50%);
        background: linear-gradient(135deg, #fbbf24 0%, #f59e0b 100%);
        color: #0f172a;
        padding: 0.5rem 1rem;
        border-radius: 9999px;
        font-size: 0.875rem;
        font-weight: 700;
        box-shadow: 0 4px 15px rgba(251, 191, 36, 0.4);
    }

    /* プラン注釈 */
    .plan-note {
        text-align: center;
        font-size: 0.75rem;
        color: #94a3b8;
        margin-top: 0.5rem;
    }

    /* FAQ */
    .faq-section {
        max-width: 800px;
        margin: 0 auto;
    }

    .faq-title {
        font-size: 2rem;
        font-weight: 700;
        text-align: center;
        margin-bottom: 3rem;
    }

    .faq-container {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .faq-item {
        background: rgba(30, 41, 59, 0.6);
        border-radius: 0.75rem;
        padding: 1.5rem;
        border: 1px solid rgba(51, 65, 85, 0.3);
    }

    .faq-question {
        font-weight: 700;
        margin-bottom: 0.5rem;
        color: #f1f5f9;
    }

    .faq-answer {
        color: #94a3b8;
        line-height: 1.6;
        margin: 0;
    }

    /* レスポンシブ */
    @media (max-width: 768px) {
        .pricing-title {
            font-size: 2rem;
        }

        .pricing-subtitle {
            font-size: 1.125rem;
        }

        .plan-card-recommended {
            transform: scale(1);
        }

        .plans-container {
            grid-template-columns: 1fr;
            gap: 1.5rem;
        }

        .plan-card {
            padding: 1.5rem;
        }

        .price-amount {
            font-size: 2rem;
        }
    }

    @media (max-width: 480px) {
        .pricing-page {
            padding: 1rem 0.5rem;
        }

        .pricing-header {
            margin-bottom: 2rem;
        }

        .pricing-title {
            font-size: 1.75rem;
        }

        .pricing-subtitle {
            font-size: 1rem;
        }

        /* モバイルでのボタン視認性強化 */
        .plan-button {
            padding: 1rem 1.5rem;
            font-size: 1.1rem;
            font-weight: 700;
        }

        .plan-button-free {
            border-width: 3px;
        }

        .plan-button-standard {
            border-width: 3px;
        }

        .plan-button-premium {
            border-width: 3px;
        }
    }
</style>