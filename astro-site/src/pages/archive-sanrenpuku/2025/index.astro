// 2025å¹´å…¨ãƒ‡ãƒ¼ã‚¿çµ±åˆ
const archiveSanrenpukuResults = {
  '2025': {
    ...archiveData2025_11['2025'],
    ...archiveData2025_12['2025']
  }
};

const year = '2025';
const yearData = archiveSanrenpukuResults[year] || {};
const months = Object.keys(yearData).sort().reverse(); // æ–°ã—ã„é †

// å¹´é–“çµ±è¨ˆè¨ˆç®—
let totalDays = 0;
let totalPayoutYear = 0;
let totalHitRaces = 0;
let totalRaces = 0;

const monthSummaries = months.map(month => {
  const monthData = yearData[month];
  const days = Object.keys(monthData);

  let perfectDays = 0;
  let monthPayout = 0;
  let monthHitRaces = 0;
  let monthTotalRaces = 0;

  days.forEach(day => {
    const dayData = monthData[day];
    if (dayData.perfectHit) perfectDays++;
    monthPayout += dayData.totalPayout || 0;
    monthHitRaces += dayData.hitRaces || 0;
    monthTotalRaces += dayData.totalRaces || 0;
  });

  totalDays += days.length;
  totalPayoutYear += monthPayout;
  totalHitRaces += monthHitRaces;
  totalRaces += monthTotalRaces;

  const hitRate = monthTotalRaces > 0 ? Math.round((monthHitRaces / monthTotalRaces) * 100) : 0;

  return {
    month,
    perfectDays,
    payout: monthPayout,
    hitRaces: monthHitRaces,
    totalRaces: monthTotalRaces,
    hitRate,
    daysCount: days.length
  };
});

const yearHitRate = totalRaces > 0 ? Math.round((totalHitRaces / totalRaces) * 100) : 0;
