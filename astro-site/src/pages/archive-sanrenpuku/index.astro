    text-align: center;
  }

  .cta-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: rgb(96, 165, 250);
    margin-bottom: 16px;
  }

  .cta-text {
    font-size: 1rem;
    color: rgba(226, 232, 240, 0.8);
    line-height: 1.8;
    margin-bottom: 20px;
  }

  .cta-stats {
    display: grid;
