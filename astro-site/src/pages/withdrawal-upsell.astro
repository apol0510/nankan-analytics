---
// 退会前アップセル専用ページ
// クライアントサイドで日付計算（デプロイ不要）
---

<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>退会前にご確認ください - NANKANアナリティクス</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      background: #0f172a;
      color: #e2e8f0;
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
      padding: 2rem;
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .upsell-container {
      max-width: 900px;
      margin: 0 auto;
      background: rgba(30, 41, 59, 0.8);
      border-radius: 24px;
      padding: 3rem;
      backdrop-filter: blur(16px);
      border: 1px solid rgba(59, 130, 246, 0.2);
      box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
    }

    .title {
      font-size: 2.5rem;
      font-weight: bold;
      color: #f59e0b;
      margin-bottom: 1rem;
      text-align: center;
      line-height: 1.3;
    }

    .subtitle {
      font-size: 1.3rem;
      margin-bottom: 2.5rem;
      color: #10b981;
      text-align: center;
      font-weight: 500;
    }

    .hit-image {
      width: 100%;
      max-width: 700px;
      border-radius: 16px;
      box-shadow: 0 15px 40px rgba(0, 0, 0, 0.6);
      margin: 2rem auto;
      display: block;
      border: 2px solid rgba(245, 158, 11, 0.3);
    }

    .description {
      font-size: 1.15rem;
      line-height: 1.9;
      margin-bottom: 2.5rem;
      text-align: center;
      color: #cbd5e1;
    }

    .description strong {
      color: #fbbf24;
      font-weight: 700;
    }

    .price-box {
      background: linear-gradient(135deg, #f59e0b, #ef4444);
      padding: 2.5rem;
      border-radius: 16px;
      margin: 2.5rem 0;
      text-align: center;
      box-shadow: 0 10px 30px rgba(245, 158, 11, 0.3);
    }

    .badge-discount {
      display: inline-block;
      background: #fff;
      color: #ef4444;
      padding: 0.5rem 1.5rem;
      border-radius: 30px;
      font-size: 1.1rem;
      font-weight: bold;
      margin-bottom: 1rem;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
    }

    .original-price {
      text-decoration: line-through;
      font-size: 1.8rem;
      opacity: 0.8;
      color: #fff;
      margin-bottom: 0.5rem;
    }

    .sale-price {
      font-size: 3.5rem;
      font-weight: bold;
      color: #fff;
      margin: 1rem 0;
      text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
    }

    .price-note {
      color: #fff;
      font-size: 1.1rem;
      margin-top: 1rem;
      opacity: 0.95;
    }

    .button-group {
      display: flex;
      flex-direction: column;
      gap: 1rem;
      margin-top: 2rem;
      align-items: center;
    }

    .cta-button {
      background: linear-gradient(135deg, #10b981, #059669);
      color: #fff;
      padding: 1.5rem 3rem;
      font-size: 1.4rem;
      font-weight: bold;
      border: none;
      border-radius: 12px;
      cursor: pointer;
      text-decoration: none;
      display: inline-block;
      transition: all 0.3s;
      box-shadow: 0 8px 20px rgba(16, 185, 129, 0.4);
      width: 100%;
      max-width: 500px;
      text-align: center;
    }

    .cta-button:hover {
      transform: translateY(-3px);
      box-shadow: 0 12px 30px rgba(16, 185, 129, 0.6);
    }

    .secondary-button {
      background: transparent;
      border: 2px solid #64748b;
      color: #94a3b8;
      padding: 1rem 2rem;
      font-size: 1rem;
      border-radius: 8px;
      cursor: pointer;
      text-decoration: none;
      display: inline-block;
      transition: all 0.3s;
      width: 100%;
      max-width: 500px;
      text-align: center;
      font-family: inherit;
      pointer-events: auto;
    }

    .secondary-button:hover {
      border-color: #e2e8f0;
      color: #e2e8f0;
      background: rgba(100, 116, 139, 0.1);
    }

    .highlight-box {
      background: rgba(59, 130, 246, 0.1);
      border: 1px solid rgba(59, 130, 246, 0.3);
      border-radius: 12px;
      padding: 1.5rem;
      margin: 2rem 0;
      text-align: center;
    }

    .highlight-box p {
      font-size: 1.1rem;
      color: #60a5fa;
      line-height: 1.7;
    }

    /* 痛みポイント・解決策セクション */
    .pain-section {
      background: rgba(15, 23, 42, 0.8);
      border-radius: 16px;
      padding: 2rem;
      margin: 2.5rem 0;
      border: 1px solid rgba(100, 116, 139, 0.3);
    }

    .pain-item,
    .solution-item {
      display: flex;
      align-items: flex-start;
      gap: 1rem;
      background: rgba(15, 23, 42, 0.6);
      border-radius: 12px;
      padding: 1.5rem;
      margin-bottom: 1rem;
      border: 1px solid rgba(100, 116, 139, 0.3);
      transition: all 0.3s ease;
    }

    .pain-item:hover {
      border-color: rgba(239, 68, 68, 0.5);
      box-shadow: 0 4px 12px rgba(239, 68, 68, 0.1);
    }

    .solution-item {
      background: rgba(16, 185, 129, 0.1);
      border: 2px solid rgba(16, 185, 129, 0.5);
    }

    .solution-item:hover {
      border-color: rgba(16, 185, 129, 0.7);
      box-shadow: 0 4px 12px rgba(16, 185, 129, 0.2);
    }

    .pain-icon,
    .solution-icon {
      font-size: 2rem;
      flex-shrink: 0;
    }

    .pain-text strong,
    .solution-text strong {
      display: block;
      font-size: 1.1rem;
      color: #e2e8f0;
      margin-bottom: 0.5rem;
    }

    .solution-text strong {
      color: #10b981;
      font-size: 1.2rem;
    }

    .pain-text p,
    .solution-text p {
      font-size: 0.95rem;
      color: #94a3b8;
      margin: 0;
      line-height: 1.6;
    }

    .solution-text p {
      color: #cbd5e1;
    }

    /* お客様の声（社会的証明） */
    .testimonial {
      background: rgba(15, 23, 42, 0.6);
      border-left: 4px solid #fbbf24;
      border-radius: 8px;
      padding: 1.5rem;
      margin: 2rem 0;
    }

    .testimonial-text {
      font-size: 1rem;
      color: #e2e8f0;
      line-height: 1.8;
      margin-bottom: 1rem;
      font-style: italic;
    }

    .testimonial-author {
      font-size: 0.9rem;
      color: #94a3b8;
      text-align: right;
    }

    /* 緊急性警告 */
    .urgency-warning {
      background: linear-gradient(135deg, rgba(239, 68, 68, 0.1), rgba(245, 158, 11, 0.1));
      border: 2px solid rgba(245, 158, 11, 0.5);
      border-radius: 12px;
      padding: 2rem;
      margin: 2rem 0;
      text-align: center;
      color: #fbbf24;
    }

    @media (max-width: 768px) {
      body {
        padding: 1rem;
      }

      .upsell-container {
        padding: 2rem 1.5rem;
      }

      .title {
        font-size: 1.8rem;
      }

      .subtitle {
        font-size: 1.1rem;
      }

      .description {
        font-size: 1rem;
      }

      .sale-price {
        font-size: 2.5rem;
      }

      .cta-button {
        font-size: 1.2rem;
        padding: 1.2rem 2rem;
      }

      .pain-section {
        padding: 1.5rem;
      }

      .pain-item,
      .solution-item {
        flex-direction: column;
        gap: 0.8rem;
        padding: 1.2rem;
      }

      .pain-icon,
      .solution-icon {
        font-size: 1.5rem;
      }

      .pain-text strong,
      .solution-text strong {
        font-size: 1rem;
      }

      .testimonial {
        padding: 1.2rem;
      }

      .testimonial-text {
        font-size: 0.9rem;
      }

      .urgency-warning {
        padding: 1.5rem;
      }

      .urgency-warning p {
        font-size: 0.9rem !important;
      }
    }
  </style>
</head>
<body>
  <div class="upsell-container">
    <h1 class="title">退会を考えられた理由、<br>わかります。</h1>
    <p class="subtitle">でも、その悩みを解決する方法があります。</p>

    <!-- 退会理由への共感セクション -->
    <div class="pain-section">
      <h3 style="color: #fbbf24; font-size: 1.3rem; margin-bottom: 1.5rem; text-align: center;">😰 こんな理由で退会を考えていませんか？</h3>

      <div class="pain-item">
        <span class="pain-icon">❌</span>
        <div class="pain-text">
          <strong>3つの戦略、結局どれを選べばいいか分からない</strong>
          <p>少点数的中型？バランス型？高配当追求型？毎回悩んでしまう...</p>
        </div>
      </div>

      <div class="pain-item">
        <span class="pain-icon">❌</span>
        <div class="pain-text">
          <strong>オッズを確認して戦略を選ぶのが面倒</strong>
          <p>11倍以上なら○○型、11倍以下なら△△型...毎回調べるのが大変</p>
        </div>
      </div>

      <div class="pain-item">
        <span class="pain-icon">❌</span>
        <div class="pain-text">
          <strong>毎レースチェックする時間がない</strong>
          <p>12レース全部見て、3戦略を比較検討...時間がいくらあっても足りない</p>
        </div>
      </div>

      <div class="solution-item">
        <span class="solution-icon">✅</span>
        <div class="solution-text">
          <strong>プレミアムプラスなら、これらの悩みをすべて解決</strong>
          <p>超精密AIが選んだ1鞍だけ。選択の悩みゼロ、時間不要、届いた買い目を購入するだけ。</p>
        </div>
      </div>
    </div>

    <!-- 実績セクション -->
    <h3 style="color: #10b981; font-size: 1.5rem; margin: 2.5rem 0 1.5rem; text-align: center;">📊 実際の的中実績をご覧ください</h3>

    <img
      id="hitImage"
      src=""
      alt="実際の的中実績 - AI超精密買い目"
      class="hit-image"
      loading="eager"
    />

    <div class="description">
      <p>
        <strong>三連単少点数</strong>で、<strong style="font-size: 1.4rem; color: #fbbf24;">平均配当¥281,340</strong>を実現。
      </p>
      <p style="margin-top: 1rem;">
        的中率<strong>78%</strong>、期待リターン<strong>265%</strong>（投資額の約2.7倍回収）を記録。
      </p>
      <p style="margin-top: 1rem;">
        これは<strong>AIにしか実現できない</strong>、数万通りの買い目から厳選した超精密買い目です。
      </p>
    </div>

    <!-- 解決策セクション -->
    <div class="highlight-box">
      <p>
        <strong>1日1鞍限定・AI超精密買い目</strong>を提供する<br>
        <strong>「プレミアムプラス」プラン</strong>を、<br>
        退会者様限定<strong>¥30,000引き（¥68,000）</strong>でご案内します。
      </p>
      <p style="margin-top: 1rem; font-size: 0.95rem; color: #94a3b8;">
        数万通りの買い目からAIが導き出す、<br>
        「最高確率の1鞍」だけを厳選配信。選択不要、時間不要。
      </p>
    </div>

    <!-- 社会的証明セクション -->
    <div class="testimonial">
      <p class="testimonial-text">
        「退会を考えていましたが、プレミアムプラスに変えて正解でした。
        投資額は1/3になり、的中率は逆に上がりました。
        選択のストレスがなくなって、競馬が純粋に楽しめるようになりました。」
      </p>
      <p class="testimonial-author">— 40代男性・会社員</p>
    </div>

    <div class="price-box">
      <div class="badge-discount">🎯 ラストチャンス ¥30,000引き 🎯</div>
      <div class="original-price">通常価格: ¥98,000</div>
      <div class="sale-price">¥68,000</div>
      <p class="price-note">
        ※退会者様限定の特別価格<br>
        ※次の超勝負レース1鞍のAI超精密買い目提供<br>
        ※人間では実現不可能なレベルの的中精度
      </p>

      <!-- 割引コード表示 -->
      <div style="margin-top: 2rem; padding: 1.5rem; background: rgba(16, 185, 129, 0.1); border: 2px solid #10b981; border-radius: 12px;">
        <p style="font-size: 1rem; color: #10b981; font-weight: 600; margin-bottom: 0.5rem;">
          💰 特別割引コード
        </p>
        <div style="display: flex; align-items: center; justify-content: center; gap: 1rem; margin: 1rem 0;">
          <code id="promoCode" style="font-size: 1.8rem; font-weight: bold; color: #fbbf24; background: rgba(251, 191, 36, 0.1); padding: 0.5rem 1.5rem; border-radius: 8px; letter-spacing: 2px;">off30000</code>
          <button onclick="copyPromoCode()" style="padding: 0.5rem 1rem; background: #10b981; color: #fff; border: none; border-radius: 6px; cursor: pointer; font-weight: 600;">📋 コピー</button>
        </div>
        <p style="font-size: 0.9rem; color: #cbd5e1; line-height: 1.6;">
          👉 お申し込みボタンをクリック後、Stripe決済ページで<br>
          上記の割引コードを入力すると<strong style="color: #10b981;">¥30,000引き</strong>が適用されます
        </p>
      </div>
    </div>

    <!-- ラストチャンス強調 -->
    <div class="urgency-warning">
      <p style="font-size: 1.2rem; font-weight: 600; margin-bottom: 1rem;">
        ⚠️ この¥30,000引き価格は、このページからのお申し込み限定です
      </p>
      <p style="font-size: 1rem; line-height: 1.8; color: #cbd5e1;">
        一度退会されますと、この特別価格で再度ご利用いただくことはできません。
      </p>
    </div>

    <div class="button-group">
      <a href="https://buy.stripe.com/9B628rdh7gR22pJdJ9dby0O" class="cta-button">
        🏆 割引コードを使って申し込む
      </a>

      <button id="proceedWithdrawal" class="secondary-button">
        いいえ、退会手続きに進む
      </button>
    </div>

    <!-- 退会確認モーダル -->
    <div id="withdrawalModal" style="display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.8); z-index: 9999; align-items: center; justify-content: center;">
      <div style="background: #1e293b; padding: 3rem; border-radius: 16px; max-width: 500px; margin: 2rem;">
        <h3 style="color: #f87171; font-size: 1.5rem; margin-bottom: 1rem;">本当に退会しますか？</h3>
        <p style="color: #cbd5e1; line-height: 1.8; margin-bottom: 2rem;">
          退会後は全てのプレミアムコンテンツにアクセスできなくなります。<br>
          よろしければ、退会理由を教えてください。
        </p>

        <textarea id="withdrawalReason" placeholder="退会理由（任意）" style="width: 100%; padding: 1rem; border-radius: 8px; background: #0f172a; color: #e2e8f0; border: 1px solid #334155; margin-bottom: 1.5rem; min-height: 100px; font-family: inherit;"></textarea>

        <div style="display: flex; gap: 1rem;">
          <button id="confirmWithdrawal" style="flex: 1; padding: 1rem; background: #ef4444; color: #fff; border: none; border-radius: 8px; font-weight: bold; cursor: pointer;">
            退会する
          </button>
          <button id="cancelWithdrawal" style="flex: 1; padding: 1rem; background: #334155; color: #e2e8f0; border: none; border-radius: 8px; cursor: pointer;">
            キャンセル
          </button>
        </div>
      </div>
    </div>

    <script is:inline>
      // 画像自動設定（クライアントサイドで今日の日付計算）
      (function() {
        const img = document.getElementById('hitImage');
        const now = new Date();
        const jst = new Date(now.toLocaleString('en-US', { timeZone: 'Asia/Tokyo' }));
        // jst.setDate(jst.getDate() - 1); // 昨日 → 今日に変更

        function tryLoadImage(daysBack) {
          const testDate = new Date(jst);
          testDate.setDate(testDate.getDate() - daysBack);
          const year = testDate.getFullYear();
          const month = String(testDate.getMonth() + 1).padStart(2, '0');
          const day = String(testDate.getDate()).padStart(2, '0');
          const dateStr = `${year}${month}${day}`;
          const imagePath = `/upsell-images/upsell-${dateStr}.png`;

          img.src = imagePath;
          console.log(`[withdrawal-upsell] 画像読み込み試行: ${imagePath}`);

          if (daysBack < 10) {
            img.onerror = function() {
              console.log(`[withdrawal-upsell] 画像なし、${daysBack + 1}日前を試行`);
              tryLoadImage(daysBack + 1);
            };
          } else {
            img.onerror = function() {
              console.error('[withdrawal-upsell] 10日前まで画像が見つかりませんでした');
            };
          }
        }

        tryLoadImage(0);
      })();

      const modal = document.getElementById('withdrawalModal');
      const proceedBtn = document.getElementById('proceedWithdrawal');
      const confirmBtn = document.getElementById('confirmWithdrawal');
      const cancelBtn = document.getElementById('cancelWithdrawal');
      const reasonTextarea = document.getElementById('withdrawalReason');

      proceedBtn.addEventListener('click', function() {
        modal.style.display = 'flex';
      });

      cancelBtn.addEventListener('click', function() {
        modal.style.display = 'none';
      });

      confirmBtn.addEventListener('click', async function() {
        const reason = reasonTextarea.value || '理由未記入';
        const email = localStorage.getItem('userEmail') || '';

        if (!email) {
          alert('メールアドレスが取得できませんでした。ダッシュボードから再度お試しください。');
          return;
        }

        // ボタンを無効化
        confirmBtn.disabled = true;
        confirmBtn.textContent = '処理中...';

        try {
          // 退会処理APIを呼び出し
          const response = await fetch('/.netlify/functions/process-withdrawal', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify({
              email: email,
              reason: reason
            })
          });

          const result = await response.json();

          if (response.ok) {
            // 成功時: 完了ページにリダイレクト
            alert('退会申請を受け付けました。確認メールをお送りしましたのでご確認ください。\n\n担当者より2営業日以内にご連絡いたします。');
            window.location.href = '/';
          } else {
            throw new Error(result.error || '退会申請の送信に失敗しました');
          }
        } catch (error) {
          alert(`エラーが発生しました: ${error.message}\n\nお手数ですが、お問い合わせフォームからご連絡ください。`);
          confirmBtn.disabled = false;
          confirmBtn.textContent = '退会する';
        }
      });

      // モーダル外クリックで閉じる
      modal.addEventListener('click', function(e) {
        if (e.target === modal) {
          modal.style.display = 'none';
        }
      });

      // 割引コードコピー機能（より確実な実装）
      function copyPromoCode() {
        const code = 'off30000';

        // テキストエリアを使った従来の方法（より確実）
        const textarea = document.createElement('textarea');
        textarea.value = code;
        textarea.style.position = 'fixed';
        textarea.style.opacity = '0';
        document.body.appendChild(textarea);
        textarea.select();

        try {
          const successful = document.execCommand('copy');
          document.body.removeChild(textarea);

          if (successful) {
            const btn = event.target;
            const originalText = btn.textContent;
            btn.textContent = '✅ コピー完了！';
            btn.style.background = '#059669';
            setTimeout(() => {
              btn.textContent = originalText;
              btn.style.background = '#10b981';
            }, 2000);
          } else {
            throw new Error('Copy failed');
          }
        } catch (err) {
          document.body.removeChild(textarea);
          // フォールバック：コードを選択状態にする
          const codeElement = document.getElementById('promoCode');
          const range = document.createRange();
          range.selectNode(codeElement);
          window.getSelection().removeAllRanges();
          window.getSelection().addRange(range);
          alert('コードを選択しました。Ctrl+C（Mac: Cmd+C）でコピーしてください');
        }
      }
    </script>

  </div>
</body>
</html>