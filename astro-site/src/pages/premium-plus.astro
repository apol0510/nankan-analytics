    .comparison-table {
      width: 100%;
      border-collapse: separate;
      border-spacing: 0;
      overflow: hidden;
      border-radius: 12px;
    }

    .comparison-table th,
    .comparison-table td {
      padding: 1.2rem;
      text-align: left;
      border-bottom: 1px solid rgba(100, 116, 139, 0.2);
    }

    .comparison-table th {
      background: rgba(59, 130, 246, 0.2);
      color: #60a5fa;
      font-weight: 600;
    }

    .comparison-table td {
      background: rgba(15, 23, 42, 0.5);
    }

    .comparison-table .highlight {
      background: rgba(245, 158, 11, 0.1);
      font-weight: 600;
      color: #fbbf24;
    }

    .check-icon {
      color: #10b981;
      font-size: 1.2rem;
    }

    .cross-icon {
      color: #64748b;
      font-size: 1.2rem;
    }

    /* 価格正当性 */
    .value-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 1.5rem;
    }

    .value-card {
      background: rgba(15, 23, 42, 0.6);
      border: 1px solid rgba(139, 92, 246, 0.3);
      border-radius: 12px;
      padding: 1.5rem;
    }

    .value-title {
      font-size: 1.1rem;
      font-weight: 600;
      color: #a78bfa;
      margin-bottom: 0.8rem;
    }

    .value-amount {
      font-size: 2rem;
      font-weight: bold;
      color: #fbbf24;
      margin-bottom: 0.5rem;
    }

    .value-description {
      font-size: 0.9rem;
      color: #cbd5e1;
      line-height: 1.6;
    }

    /* リスク軽減 */
    .guarantee-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 1.5rem;
    }

    .guarantee-card {
      background: rgba(16, 185, 129, 0.1);
      border: 1px solid rgba(16, 185, 129, 0.3);
      border-radius: 12px;
      padding: 1.5rem;
    }

    .guarantee-icon {
      font-size: 2.5rem;
      margin-bottom: 1rem;
    }

    .guarantee-title {
      font-size: 1.2rem;
      font-weight: 600;
      color: #10b981;
      margin-bottom: 0.8rem;
    }

    .guarantee-text {
      font-size: 0.95rem;
      color: #cbd5e1;
      line-height: 1.6;
    }

    /* 社会的証明 */
    .testimonial-grid {
      display: grid;
      gap: 1.5rem;
    }

    .testimonial {
      background: rgba(15, 23, 42, 0.6);
      border-left: 4px solid #fbbf24;
      border-radius: 8px;
      padding: 1.5rem;
    }

    .testimonial-text {
      font-size: 1rem;
      color: #e2e8f0;
      line-height: 1.8;
      margin-bottom: 1rem;
      font-style: italic;
    }

    .testimonial-author {
      font-size: 0.9rem;
      color: #94a3b8;
      text-align: right;
    }

    /* 限定性 */
    .urgency-box {
      background: linear-gradient(135deg, rgba(239, 68, 68, 0.1), rgba(245, 158, 11, 0.1));
      border: 2px solid rgba(245, 158, 11, 0.5);
      border-radius: 12px;
      padding: 2rem;
      text-align: center;
    }

    .urgency-title {
      font-size: 1.5rem;
      font-weight: bold;
      color: #fbbf24;
      margin-bottom: 1rem;
    }

    .urgency-text {
      font-size: 1.1rem;
      color: #e2e8f0;
      margin-bottom: 1rem;
    }

    .urgency-countdown {
      font-size: 2rem;
      font-weight: bold;
      color: #ef4444;
    }

    /* 的中実績画像（カード表示） */
    .image-card {
      background: rgba(30, 41, 59, 0.8);
      border-radius: 16px;
      padding: 2rem;
      border: 1px solid rgba(100, 116, 139, 0.3);
      text-align: center;
      margin-bottom: 2rem;
    }

    .image-card-title {
      font-size: 1.8rem;
      font-weight: bold;
      color: #fbbf24;
      margin-bottom: 1.5rem;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 12px;
    }

    .hit-image {
      width: 100%;
      max-width: 600px;
      border-radius: 12px;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.4);
      border: 1px solid rgba(245, 158, 11, 0.3);
      margin: 0 auto;
      display: block;
    }

    /* CTA */
