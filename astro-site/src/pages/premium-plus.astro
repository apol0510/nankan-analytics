      background: linear-gradient(135deg, rgba(245, 158, 11, 0.2), rgba(239, 68, 68, 0.2));
      border: 2px solid rgba(245, 158, 11, 0.5);
      border-radius: 16px;
      padding: 3rem;
      text-align: center;
      margin: 3rem 0;
    }

    .cta-title {
      font-size: 2rem;
      font-weight: bold;
      color: #fbbf24;
      margin-bottom: 1rem;
    }

    .cta-price {
      font-size: 3.5rem;
      font-weight: bold;
      color: #fff;
      margin-bottom: 0.5rem;
    }

    .cta-note {
      font-size: 1rem;
      color: #cbd5e1;
      margin-bottom: 2rem;
    }

    .cta-button {
      background: linear-gradient(135deg, #10b981, #059669);
      color: #fff;
      padding: 1.8rem 4rem;
      font-size: 1.5rem;
      font-weight: bold;
      border: none;
      border-radius: 12px;
      cursor: pointer;
      text-decoration: none;
      display: inline-block;
      transition: all 0.3s;
      box-shadow: 0 10px 30px rgba(16, 185, 129, 0.5);
    }

    .cta-button:hover {
      transform: translateY(-5px);
      box-shadow: 0 15px 40px rgba(16, 185, 129, 0.7);
    }

    .back-link {
      text-align: center;
      margin-top: 2rem;
      padding-top: 2rem;
      border-top: 1px solid rgba(100, 116, 139, 0.3);
    }

    .back-link a {
      color: #60a5fa;
      text-decoration: none;
      font-size: 0.95rem;
      transition: color 0.3s;
    }

    .back-link a:hover {
      color: #3b82f6;
    }

    /* 痛みポイント */
    .pain-points {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }

    .pain-item,
    .solution-item {
      display: flex;
      align-items: flex-start;
      gap: 1rem;
      background: rgba(15, 23, 42, 0.6);
      border-radius: 12px;
      padding: 1.5rem;
      border: 1px solid rgba(100, 116, 139, 0.3);
      transition: all 0.3s ease;
    }

    .pain-item:hover {
      border-color: rgba(239, 68, 68, 0.5);
      box-shadow: 0 4px 12px rgba(239, 68, 68, 0.1);
    }

    .solution-item {
      background: rgba(16, 185, 129, 0.1);
      border: 2px solid rgba(16, 185, 129, 0.5);
    }

    .solution-item:hover {
      border-color: rgba(16, 185, 129, 0.7);
      box-shadow: 0 4px 12px rgba(16, 185, 129, 0.2);
    }

    .pain-icon,
    .solution-icon {
      font-size: 2rem;
      flex-shrink: 0;
    }

    .pain-text strong,
    .solution-text strong {
      display: block;
      font-size: 1.1rem;
      color: #e2e8f0;
      margin-bottom: 0.5rem;
    }

    .solution-text strong {
      color: #10b981;
      font-size: 1.2rem;
    }

    .pain-text p,
    .solution-text p {
      font-size: 0.95rem;
      color: #94a3b8;
      margin: 0;
      line-height: 1.6;
    }

    .solution-text p {
      color: #cbd5e1;
    }

    /* 選択疲れ訴求 */
    .choice-fatigue-box {
      background: rgba(15, 23, 42, 0.8);
      border-radius: 12px;
      overflow: hidden;
    }

    .fatigue-quotes {
      background: rgba(239, 68, 68, 0.1);
      border-bottom: 2px solid rgba(239, 68, 68, 0.3);
      padding: 2rem;
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }

    .quote-item {
      font-size: 1.2rem;
      color: #fca5a5;
      font-style: italic;
      padding: 1rem;
      background: rgba(15, 23, 42, 0.5);
      border-left: 3px solid #ef4444;
      border-radius: 8px;
    }

    .solution-banner {
      background: linear-gradient(135deg, rgba(16, 185, 129, 0.1), rgba(5, 150, 105, 0.1));
      padding: 2rem;
      text-align: center;
    }

    .solution-banner h3 {
      font-size: 1.5rem;
      color: #10b981;
      margin-bottom: 1rem;
    }

    .solution-banner p {
      font-size: 1.1rem;
      color: #e2e8f0;
      line-height: 1.8;
      margin-bottom: 2rem;
    }

    .solution-banner strong {
      color: #10b981;
      font-size: 1.2rem;
    }

    .solution-stats {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 2rem;
      margin-top: 2rem;
    }

    .solution-stat {
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .stat-number {
      font-size: 3rem;
      font-weight: bold;
      color: #10b981;
      margin-bottom: 0.5rem;
    }

    .stat-label {
      font-size: 0.95rem;
      color: #94a3b8;
    }

    /* 価格比較 */
    .price-comparison {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 2rem;
      margin-bottom: 2rem;
    }

    .plan-cost {
      background: rgba(15, 23, 42, 0.6);
      border: 1px solid rgba(100, 116, 139, 0.3);
      border-radius: 12px;
      padding: 2rem;
    }

    .plus-plan {
      background: rgba(16, 185, 129, 0.1);
      border: 2px solid rgba(16, 185, 129, 0.5);
    }

    .plan-cost h3 {
      font-size: 1.3rem;
      color: #60a5fa;
      margin-bottom: 1.5rem;
      text-align: center;
    }

    .plus-plan h3 {
      color: #10b981;
    }

    .cost-breakdown {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }

    .cost-item {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 0.8rem;
      background: rgba(15, 23, 42, 0.5);
      border-radius: 8px;
    }

    .cost-item.success {
      background: rgba(16, 185, 129, 0.1);
      border: 1px solid rgba(16, 185, 129, 0.3);
    }

    .cost-total {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 1rem;
      background: rgba(59, 130, 246, 0.1);
      border: 2px solid rgba(59, 130, 246, 0.3);
      border-radius: 8px;
      margin-top: 0.5rem;
    }

    .cost-total.success {
      background: rgba(16, 185, 129, 0.1);
      border: 2px solid rgba(16, 185, 129, 0.5);
    }

    .cost-label {
      font-size: 0.95rem;
      color: #94a3b8;
    }

    .cost-value {
      font-size: 1.1rem;
      font-weight: 600;
      color: #e2e8f0;
    }

    .highlight-red {
      font-size: 1.5rem;
      color: #ef4444;
      font-weight: 700;
    }

    .highlight-green {
      font-size: 1.2rem;
      color: #10b981;
      font-weight: 700;
    }

    /* 最後の背中押し */
    .final-push {
      text-align: center;
      background: linear-gradient(135deg, rgba(139, 92, 246, 0.1), rgba(59, 130, 246, 0.1));
      border: 2px solid rgba(139, 92, 246, 0.5);
      border-radius: 16px;
      padding: 3rem;
    }

    .final-push-icon {
      font-size: 4rem;
      margin-bottom: 1.5rem;
    }

    .final-push-title {
      font-size: 2rem;
      font-weight: bold;
      color: #a78bfa;
      margin-bottom: 1.5rem;
    }

    .final-push-text {
      font-size: 1.2rem;
      color: #e2e8f0;
      line-height: 2;
      margin-bottom: 1.5rem;
    }

    .final-push-text strong {
      color: #10b981;
      font-size: 1.3rem;
    }

    .final-push-question {
      font-size: 1.4rem;
      color: #fbbf24;
      font-weight: 600;
      margin-top: 2rem;
    }

    @media (max-width: 768px) {
      body {
        padding: 1rem 0.5rem;
      }

      .title {
        font-size: 1.8rem;
      }

      .subtitle {
        font-size: 1.1rem;
      }

      .section {
        padding: 1.5rem;
      }

      .section-title {
        font-size: 1.4rem;
      }

      .results-grid {
        grid-template-columns: 1fr;
      }

      .stats-grid {
        grid-template-columns: 1fr;
      }

      .value-grid {
        grid-template-columns: 1fr;
      }

      .guarantee-grid {
        grid-template-columns: 1fr;
      }

      .cta-price {
        font-size: 2.5rem;
      }

      .cta-button {
        font-size: 1.2rem;
        padding: 1.5rem 2.5rem;
      }

      .solution-stats {
        grid-template-columns: 1fr;
        gap: 1.5rem;
      }

      .stat-number {
        font-size: 2rem;
      }

      .quote-item {
        font-size: 1rem;
      }

      .price-comparison {
        grid-template-columns: 1fr;
      }

      .highlight-red,
      .highlight-green {
        font-size: 1.2rem;
      }

      .final-push {
        padding: 2rem 1.5rem;
      }

      .final-push-icon {
        font-size: 3rem;
      }

      .final-push-title {
        font-size: 1.5rem;
      }

      .final-push-text {
        font-size: 1rem;
      }

      .final-push-text strong {
        font-size: 1.1rem;
      }

      .final-push-question {
        font-size: 1.1rem;
      }
    }
  </style>
</head>
