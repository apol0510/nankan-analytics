          card.appendChild(displayImg);
          grid.appendChild(card);

          foundCount++;
          daysBack++;
          tryNextImage();
        };

        img.onerror = function() {
          // 画像が存在しない場合は次の日へ
          daysBack++;
          tryNextImage();
        };

        img.src = `/upsell-images/upsell-${dateStr}.png`;
