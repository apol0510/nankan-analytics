      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
      color: #e2e8f0;
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
      padding: 2rem 1rem;
      min-height: 100vh;
    }

    .container {
      max-width: 1200px;
      margin: 0 auto;
    }

    .header {
      text-align: center;
      margin-bottom: 3rem;
      padding: 2rem;
      background: rgba(30, 41, 59, 0.5);
      border-radius: 16px;
      border: 1px solid rgba(245, 158, 11, 0.3);
    }

    .title {
      font-size: 2.5rem;
      font-weight: bold;
      color: #f59e0b;
      margin-bottom: 1rem;
      line-height: 1.3;
    }

    .subtitle {
      font-size: 1.3rem;
      color: #10b981;
      font-weight: 500;
      margin-bottom: 1rem;
    }

    .tagline {
      font-size: 1rem;
      color: #cbd5e1;
      max-width: 600px;
      margin: 0 auto;
    }

    .section {
      background: rgba(30, 41, 59, 0.8);
      border-radius: 16px;
      padding: 2.5rem;
      margin-bottom: 2rem;
      border: 1px solid rgba(100, 116, 139, 0.3);
    }

    .section-title {
      font-size: 1.8rem;
      font-weight: bold;
      color: #fbbf24;
      margin-bottom: 1.5rem;
      display: flex;
      align-items: center;
      gap: 12px;
    }

    .section-subtitle {
      font-size: 1rem;
      color: #94a3b8;
      margin-bottom: 2rem;
    }

    /* 実績画像グリッド */
    .results-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 1rem;
      margin-bottom: 2rem;
    }

    .result-image-card {
      background: rgba(15, 23, 42, 0.6);
      border-radius: 12px;
      padding: 0.8rem;
      border: 1px solid rgba(245, 158, 11, 0.3);
      transition: all 0.3s ease;
    }

    .result-image-card:hover {
      transform: translateY(-4px);
      border-color: rgba(245, 158, 11, 0.5);
      box-shadow: 0 8px 20px rgba(245, 158, 11, 0.2);
    }

    .result-image-card img {
      width: 100%;
      height: auto;
      border-radius: 8px;
      display: block;
    }

    .stats-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 1.5rem;
      margin-top: 2rem;
    }

    .stat-box {
      background: rgba(59, 130, 246, 0.1);
      border: 1px solid rgba(59, 130, 246, 0.3);
      border-radius: 12px;
      padding: 1.5rem;
      text-align: center;
    }

    .stat-value {
      font-size: 2.5rem;
      font-weight: bold;
      color: #60a5fa;
      margin-bottom: 0.5rem;
    }

    .stat-label {
      font-size: 0.95rem;
      color: #94a3b8;
    }

