import BaseLayout from '../layouts/BaseLayout.astro';
import raceResults from '../data/raceResults.json';
import predictionData from '../data/aiPrediction.json';

// データ取得
const { currentResults, weeklyResults, predictions } = raceResults;
const { raceInfo, preview } = predictionData;

// 日付フォーマット変換
function formatDate(dateStr) {
    const date = new Date(dateStr);
    const month = date.getMonth() + 1;
    const day = date.getDate();
    return `${month}月${day}日`;
}

// レース情報の整形
const formattedDate = formatDate(raceInfo.date);
const raceTitle = `${formattedDate} ${raceInfo.track !== 'レース情報未検出' ? raceInfo.track : ''} ${raceInfo.raceNumber}${raceInfo.raceName !== 'レース情報未検出' ? ' ' + raceInfo.raceName : ''}`;
