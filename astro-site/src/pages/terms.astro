---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Terms of Service" description="Terms of Service for NANKAN Analytics sports data analytics platform">
  <style>
    .legal-page {
      padding: 4rem 0;
      background: white;
      min-height: 100vh;
    }

    .legal-content {
      max-width: 900px;
      margin: 0 auto;
    }

    .legal-content h1 {
      font-size: 2.5rem;
      color: #1f2937;
      margin-bottom: 1rem;
    }

    .last-updated {
      color: #6b7280;
      margin-bottom: 3rem;
      font-style: italic;
    }

    .legal-content h2 {
      font-size: 1.75rem;
      color: #2563eb;
      margin-top: 2.5rem;
      margin-bottom: 1rem;
    }

    .legal-content p {
      line-height: 1.8;
      color: #374151;
      margin-bottom: 1.5rem;
    }

    .legal-content ul {
      list-style: disc;
      margin-left: 2rem;
      margin-bottom: 1.5rem;
    }

    .legal-content li {
      line-height: 1.8;
      color: #374151;
      margin-bottom: 0.5rem;
    }

    .language-notice {
      background: #fef3c7;
      padding: 1.5rem;
      border-left: 4px solid #f59e0b;
      margin-bottom: 2rem;
      border-radius: 4px;
    }

    .language-notice p {
      font-size: 1rem;
      color: #92400e;
      margin: 0;
      line-height: 1.8;
      font-weight: 500;
    }

    @media (max-width: 768px) {
      .legal-content h1 {
        font-size: 2rem;
      }

      .legal-content h2 {
        font-size: 1.5rem;
      }
    }
  </style>

