---
export const prerender = true; // 静的サイト生成用に戻す
import BaseLayout from '../layouts/BaseLayout.astro';
import ProgressBarConfidence from '../components/ProgressBarConfidence.astro';
import allRacesData from '../data/allRacesPrediction.json';
import { processRaceData, processUnifiedRaceData, normalizeHorseData, getRoleDisplayConfig, validateDataIntegrity, getHorseConfidenceFromMark, calculateMarkBasedConfidence, convertToStarRating, getRecommendationStars, generateStandardizedBets, calculateScoreBasedStats, getPredictionDataWithStrategies } from '../lib/shared-prediction-logic.js';

// 共有ロジックを使用してデータを処理
const { mainRace, race12R: originalRace12R, sortedRaces } = processRaceData(allRacesData);

if (!mainRace) {
    throw new Error('メインレースが見つかりません。allRacesPrediction.jsonのデータを確認してください。');
}

// 日付と会場を取得
const raceDate = allRacesData.raceDate; // "2025-09-18"
const track = allRacesData.track; // "大井競馬"

// 日付を日本語形式に変換
const [year, month, day] = raceDate.split('-');
const formattedDate = `${parseInt(month)}月${parseInt(day)}日`;

// Free会員向け: メインレース（11R）のデータを使用

// メインレースのデータを取得
const { raceInfo, horses, analysis, preview, allHorses, totalHorses } = mainRace;

// 正規化されたホースデータ（メインレース用）
const normalizedHorses = normalizeHorseData(mainRace);

// 統一システムで戦略データを生成（動的買い目対応）
const raceData = processUnifiedRaceData(mainRace);
const strategies = {
    safe: raceData.strategies.safe,
    balance: raceData.strategies.balance,
    aggressive: raceData.strategies.aggressive
};

// スコア表示用のスコア変数を定義
const mainHorseScore = getHorseConfidenceFromMark(mainRace.horses.main);
const subHorseScore = getHorseConfidenceFromMark(mainRace.horses.sub);
---

<BaseLayout title={`AI予想分析 | ${raceInfo.title}`} description={`AI技術による${raceInfo.track}競馬${raceInfo.raceName}の詳細分析。機械学習モデルによる高精度予想を無料で提供中。`}>
    <div class="container">
        <!-- ヘッダーセクション -->
        <div class="header-section">
            <div class="ai-badge">
                <span class="pulse"></span>
                <span class="ai-status">AI分析完了</span>
            </div>
            <h1 class="race-title">{formattedDate}{track}{raceInfo.raceName}</h1>
            <!-- 余計な詳細指標を削除し、シンプルに -->
        </div>

        <!-- 【新規追加】全レースプレビュー（1R-10R,12R） -->
        <section style="margin-bottom: 60px;">
            <div class="analysis-section">
                <h2 style="font-size: 2.5rem; font-weight: 800; color: var(--primary-color); text-align: center; margin-bottom: 15px;">
                    👀 全レースプレビュー
                </h2>
                <p style="text-align: center; color: var(--body-text-color); font-size: 1.1rem; margin-bottom: 40px; opacity: 0.9;">
                    全12レースの本命・対抗・単穴情報を先取りチェック
                </p>

                <!-- 全レース一覧（メインレース除く） -->
                <div style="display: grid; gap: 20px;">
                    {allRacesData.races.filter(race => race.raceNumber !== mainRace.raceNumber).map((raceData) => {
                        // 各レースのデータ処理
                        const normalizedHorses = normalizeHorseData(raceData) || [];
                        const raceHorses = Array.isArray(normalizedHorses) ? normalizedHorses : [];

                        // 本命・対抗・単穴を抽出
                        const mainHorse = raceHorses.find(h => h.role === '本命');
                        const subHorse = raceHorses.find(h => h.role === '対抗');
                        const tanaHorses = raceHorses.filter(h => h.role === '単穴');

                        return (
                        <div style="background: rgba(255, 255, 255, 0.03); border: 1px solid rgba(148, 163, 184, 0.15); border-radius: 16px; padding: 25px;">
                            <!-- レースヘッダー -->
                            <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px; flex-wrap: wrap; gap: 10px;">
                                <div>
                                    <h3 style="font-size: 1.5rem; font-weight: 700; color: var(--primary-color); margin-bottom: 5px;">
                                        {raceData.raceName || `${raceData.raceNumber} レース`}
                                    </h3>
                                    <div style="display: flex; gap: 15px; align-items: center; flex-wrap: wrap;">
                                        <span style="color: var(--body-text-color); font-size: 0.85rem;">
                                            📏 {raceData.raceInfo?.distance || '距離未定'}
                                        </span>
                                        <span style="color: var(--body-text-color); font-size: 0.85rem;">
                                            🐎 {raceData.raceInfo?.horseCount || raceData.totalHorses || '頭数未定'}頭
                                        </span>
                                        <span style="color: var(--body-text-color); font-size: 0.85rem;">
                                            🕐 {raceData.raceInfo?.startTime || '時刻未定'}
                                        </span>
                                    </div>
                                </div>
                            </div>

                            <!-- 簡潔な馬情報表示 -->
                            <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap: 15px; margin-bottom: 20px;">
                                <!-- 本命馬 -->
                                {mainHorse && (
                                    <div style="background: rgba(255, 215, 0, 0.08); border: 1px solid rgba(255, 215, 0, 0.2); border-radius: 8px; padding: 15px;">
                                        <div style="display: flex; align-items: center; gap: 10px; margin-bottom: 10px;">
                                            <span style="color: #ffd700; font-weight: 700;">◎</span>
                                            <span style="color: #ffd700; font-weight: 600;">{mainHorse.number}</span>
                                            <span style="color: var(--body-text-color); font-weight: 600; font-size: 0.9rem;">{mainHorse.name}</span>
                                            <span style="color: #ffd700; font-weight: 600; font-size: 0.8rem;">本命</span>
                                        </div>
                                        <div style="display: flex; gap: 15px; align-items: center;">
                                            {mainHorse.factors && mainHorse.factors.map(factor => (
                                                <div style="display: flex; align-items: center; gap: 5px;">
                                                    <span style="color: #ffd700; font-size: 0.8rem;">{factor.icon}</span>
                                                    <span style="color: var(--body-text-color); font-size: 0.8rem;">{factor.text}</span>
                                                </div>
                                            ))}
                                        </div>

                                        <!-- 特徴量重要度（簡略版） -->
                                        {raceData.horses?.main?.importance && (
                                            <div style="margin-top: 12px; padding-top: 12px; border-top: 1px solid rgba(255,215,0,0.2);">
                                                <div style="display: grid; gap: 6px;">
                                                    {raceData.horses.main.importance.map(item => (
                                                        <div style="display: flex; justify-content: space-between; align-items: center;">
                                                            <span style="color: var(--body-text-color); font-size: 0.75rem;">{item.label}</span>
                                                            <div style="display: flex; align-items: center; gap: 8px;">
                                                                <div style="width: 40px; height: 6px; background: rgba(255,255,255,0.1); border-radius: 3px; overflow: hidden;">
                                                                    <div style={`width: ${item.value * 100}%; height: 100%; background: #ffd700;`}></div>
                                                                </div>
                                                                <span style="color: #ffd700; font-weight: 600; font-size: 0.75rem; min-width: 28px;">{Math.round(item.value * 100)}%</span>
                                                            </div>
                                                        </div>
                                                    ))}
                                                </div>
                                            </div>
                                        )}
                                    </div>
                                )}

                                <!-- 対抗馬 -->
                                {subHorse && (
                                    <div style="background: rgba(0, 191, 255, 0.08); border: 1px solid rgba(0, 191, 255, 0.2); border-radius: 8px; padding: 15px;">
                                        <div style="display: flex; align-items: center; gap: 10px; margin-bottom: 10px;">
                                            <span style="color: #00bfff; font-weight: 700;">○</span>
                                            <span style="color: #00bfff; font-weight: 600;">{subHorse.number}</span>
                                            <span style="color: var(--body-text-color); font-weight: 600; font-size: 0.9rem;">{subHorse.name}</span>
                                            <span style="color: #00bfff; font-weight: 600; font-size: 0.8rem;">対抗</span>
                                        </div>
                                        <div style="display: flex; gap: 15px; align-items: center;">
                                            {subHorse.factors && subHorse.factors.map(factor => (
                                                <div style="display: flex; align-items: center; gap: 5px;">
                                                    <span style="color: #00bfff; font-size: 0.8rem;">{factor.icon}</span>
                                                    <span style="color: var(--body-text-color); font-size: 0.8rem;">{factor.text}</span>
                                                </div>
                                            ))}
                                        </div>

                                        <!-- 特徴量重要度（簡略版） -->
                                        {raceData.horses?.sub?.importance && (
                                            <div style="margin-top: 12px; padding-top: 12px; border-top: 1px solid rgba(0,191,255,0.2);">
                                                <div style="display: grid; gap: 6px;">
                                                    {raceData.horses.sub.importance.map(item => (
                                                        <div style="display: flex; justify-content: space-between; align-items: center;">
                                                            <span style="color: var(--body-text-color); font-size: 0.75rem;">{item.label}</span>
                                                            <div style="display: flex; align-items: center; gap: 8px;">
                                                                <div style="width: 40px; height: 6px; background: rgba(255,255,255,0.1); border-radius: 3px; overflow: hidden;">
                                                                    <div style={`width: ${item.value * 100}%; height: 100%; background: #00bfff;`}></div>
                                                                </div>
                                                                <span style="color: #00bfff; font-weight: 600; font-size: 0.75rem; min-width: 28px;">{Math.round(item.value * 100)}%</span>
                                                            </div>
                                                        </div>
                                                    ))}
                                                </div>
                                            </div>
                                        )}
                                    </div>
                                )}

                                <!-- 単穴馬（コンパクト） -->
                                {tanaHorses.length > 0 && (
