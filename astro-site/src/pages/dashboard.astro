---
// 会員ダッシュボード
---

<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ダッシュボード | NANKANアナリティクス</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
            color: #e2e8f0;
            min-height: 100vh;
        }

        .navbar {
            background: rgba(30, 41, 59, 0.9);
            backdrop-filter: blur(10px);
            border-bottom: 1px solid rgba(59, 130, 246, 0.3);
            padding: 16px 0;
        }

        .navbar-content {
            max-width: 1200px;
            margin: 0 auto;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0 20px;
        }

        .logo {
            color: #3b82f6;
            font-size: 20px;
            font-weight: 700;
            text-decoration: none;
        }

        .nav-right {
            display: flex;
            align-items: center;
            gap: 16px;
        }

        .user-info {
            color: #cbd5e1;
        }

        .btn {
            padding: 8px 16px;
            border-radius: 6px;
            text-decoration: none;
            font-size: 14px;
            font-weight: 500;
            cursor: pointer;
            border: none;
            transition: all 0.3s ease;
        }

        .btn-primary {
            background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%);
            color: white;
        }

        .btn-outline {
            background: transparent;
            color: #94a3b8;
            border: 1px solid rgba(148, 163, 184, 0.3);
        }

        .btn:hover {
            transform: translateY(-1px);
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 40px 20px;
        }

        .dashboard-header {
            margin-bottom: 40px;
        }

        .dashboard-title {
            font-size: 32px;
            font-weight: 700;
            margin-bottom: 8px;
            color: #f1f5f9;
        }

        .dashboard-subtitle {
            color: #94a3b8;
            font-size: 16px;
        }

        .dashboard-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 24px;
            margin-bottom: 40px;
        }

        .card {
            background: rgba(30, 41, 59, 0.8);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(59, 130, 246, 0.3);
            border-radius: 12px;
            padding: 24px;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 16px;
        }

        .card-title {
            font-size: 18px;
            font-weight: 600;
            color: #f1f5f9;
        }

        .card-icon {
            font-size: 24px;
        }

        .subscription-status {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            padding: 4px 12px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 500;
        }

        .status-active {
            background: rgba(34, 197, 94, 0.1);
            color: #86efac;
            border: 1px solid rgba(34, 197, 94, 0.3);
        }

        .status-inactive {
            background: rgba(239, 68, 68, 0.1);
            color: #fca5a5;
            border: 1px solid rgba(239, 68, 68, 0.3);
        }

        .quick-actions {
            display: flex;
            flex-wrap: wrap;
            gap: 12px;
            margin-top: 16px;
        }

        .action-btn {
            padding: 12px 20px;
            background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%);
            color: white;
            text-decoration: none;
            border-radius: 8px;
            font-weight: 500;
            transition: all 0.3s ease;
        }

        .action-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px -5px rgba(59, 130, 246, 0.4);
        }

        .prediction-preview {
            margin-top: 20px;
        }

        .race-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 12px 0;
            border-bottom: 1px solid rgba(59, 130, 246, 0.1);
        }

        .race-item:last-child {
            border-bottom: none;
        }

        .race-info h4 {
            color: #f1f5f9;
            margin-bottom: 4px;
        }

        .race-info p {
            color: #94a3b8;
            font-size: 14px;
        }

        .confidence-badge {
            background: rgba(34, 197, 94, 0.1);
            color: #86efac;
            padding: 4px 8px;
            border-radius: 12px;
            font-size: 12px;
            font-weight: 500;
        }

        .loading-state {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 200px;
            color: #94a3b8;
        }

        .spinner {
            width: 24px;
            height: 24px;
            border: 2px solid #475569;
            border-top: 2px solid #3b82f6;
            border-radius: 50%;
            animation: spin 1s linear infinite;
            margin-right: 12px;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        @media (max-width: 768px) {
            .dashboard-grid {
                grid-template-columns: 1fr;
            }
            
            .container {
                padding: 20px 16px;
            }
        }
    </style>
</head>
<body>
    <!-- ナビゲーションバー -->
    <nav class="navbar">
        <div class="navbar-content">
            <a href="/" class="logo">🤖 NANKANアナリティクス</a>
            <div class="nav-right">
                <div class="user-info">
                    <span id="user-email">ロード中...</span>
                </div>
                <button id="logout-btn" class="btn btn-outline">ログアウト</button>
            </div>
        </div>
    </nav>

    <div class="container">
        <div class="dashboard-header">
            <h1 class="dashboard-title">ダッシュボード</h1>
            <p class="dashboard-subtitle">AI予想と会員限定コンテンツへアクセス</p>
        </div>

        <div class="dashboard-grid">
            <!-- 会員ステータスカード -->
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">会員ステータス</h3>
                    <span class="card-icon">👤</span>
                </div>
                <div id="subscription-info">
                    <div class="loading-state">
                        <div class="spinner"></div>
                        読み込み中...
                    </div>
                </div>
            </div>

            <!-- 今日の予想カード -->
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">本日のAI予想</h3>
                    <span class="card-icon">🏇</span>
                </div>
                <div id="today-predictions">
                    <div class="loading-state">
                        <div class="spinner"></div>
                        読み込み中...
                    </div>
                </div>
            </div>

            <!-- クイックアクションカード -->
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">クイックアクション</h3>
                    <span class="card-icon">⚡</span>
                </div>
                <div class="quick-actions">
                    <a href="/premium-predictions" class="action-btn" id="prediction-link">
                        有料予想を見る
                    </a>
                    <a href="/account" class="action-btn">
                        アカウント管理
                    </a>
                </div>
            </div>
        </div>

        <!-- 未会員向けアップグレード案内 -->
        <div id="upgrade-section" class="card" style="display: none;">
            <div class="card-header">
                <h3 class="card-title">🔥 プレミアム会員になって、すべての機能をアンロック！</h3>
            </div>
            <p style="color: #94a3b8; margin-bottom: 20px;">
                AIによる高精度予想、過去データ無制限アクセス、特別レポートなど、すべての機能をご利用いただけます。
            </p>
            <div class="quick-actions">
                <a href="/pricing" class="action-btn">
                    料金プランを見る
                </a>
            </div>
        </div>
    </div>

    <script type="module">
        // SupabaseをCDNから直接インポート
        import { createClient } from 'https://cdn.skypack.dev/@supabase/supabase-js@2';
        
        const supabaseUrl = 'https://qysycsrhaatudnksbpqe.supabase.co';
        const supabaseAnonKey = 'eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6InF5c3ljc3JoYWF0dWRua3NicHFlIiwicm9sZSI6ImFub24iLCJpYXQiOjE3NTU5MzM3MjcsImV4cCI6MjA3MTUwOTcyN30.UDWi7FYqpJNpMhvMMaZoGMXwuD1R2PNH4Tk6Xs1u1pU';
        const client = createClient(supabaseUrl, supabaseAnonKey);
        
        // Stripe料金プラン設定
        const PRICING_PLANS = {
            standard: {
                id: 'price_standard_monthly',
                name: 'Standard',
                price: 1980,
                description: '10R・12R予想＋基礎コンテンツ'
            },
            premium: {
                id: 'price_premium_monthly', 
                name: 'Premium',
                price: 3980,
                description: '全レース予想＋すべてのコンテンツ'
            }
        };

        let currentUser = null;

        // 初期化
        document.addEventListener('DOMContentLoaded', async () => {
            await checkAuth();
            if (currentUser) {
                await loadUserProfile();
                // プロファイル読み込み後にプラン情報を使ってAI予想を読み込み
                const currentPlan = await getCurrentUserPlan();
                await loadTodayPredictions(currentPlan);
            }
        });

        // 認証チェック
        async function checkAuth() {
            try {
                const { data: { user }, error } = await client.auth.getUser();
                
                if (error || !user) {
                    // 未認証の場合はログインページへリダイレクト
                    window.location.href = '/auth/login?redirect=' + encodeURIComponent(window.location.pathname);
                    return;
                }
                
                currentUser = user;
                document.getElementById('user-email').textContent = user.email;
            } catch (error) {
                console.error('Auth check error:', error);
                window.location.href = '/auth/login';
            }
        }

        // ユーザープロフィール読み込み
        async function loadUserProfile() {
            const subscriptionInfo = document.getElementById('subscription-info');
            const upgradeSection = document.getElementById('upgrade-section');
            
            try {
                // デモモードのローカルストレージをチェック
                const demoSubscription = localStorage.getItem('demo_subscription_' + currentUser.id);
                
                let isActive, planName, profile = null;
                
                if (demoSubscription) {
                    const demoData = JSON.parse(demoSubscription);
                    console.log('Demo subscription found:', demoData);
                    isActive = true;
                    planName = demoData.planType.toLowerCase();
                    // デモモード用のプロファイル作成
                    profile = {
                        subscription_status: 'active',
                        subscription_plan: planName,
                        subscription_end_date: null // デモなので終了日なし
                    };
                } else {
                    const { data: profileData, error } = await client
                        .from('profiles')
                        .select('*')
                        .eq('id', currentUser.id)
                        .maybeSingle();
                    
                    if (error) {
                        throw error;
                    }

                    profile = profileData;
                    isActive = profile?.subscription_status === 'active';
                    planName = profile?.subscription_plan || 'なし';
                }
                
                subscriptionInfo.innerHTML = `
                    <div class="subscription-status ${isActive ? 'status-active' : 'status-inactive'}">
                        <span>${isActive ? '✓' : '⚠'}</span>
                        ${isActive ? 'アクティブ' : '未契約'}
                    </div>
                    <p style="color: #94a3b8; margin-top: 12px;">
                        プラン: ${getPlanDisplayName(planName)}
                    </p>
                    ${profile?.subscription_end_date ? `
                        <p style="color: #94a3b8; font-size: 14px;">
                            次回更新: ${new Date(profile.subscription_end_date).toLocaleDateString('ja-JP')}
                        </p>
                    ` : ''}
                `;

                // 未会員の場合はアップグレード案内を表示
                if (!isActive) {
                    upgradeSection.style.display = 'block';
                }
                
                // プランに応じて予想リンクを更新
                updatePredictionLink(planName);
                
            } catch (error) {
                console.error('Profile loading error:', error);
                subscriptionInfo.innerHTML = `
                    <p style="color: #fca5a5;">プロフィール情報の取得に失敗しました</p>
                `;
            }
        }

        // 現在のユーザープランを取得
        async function getCurrentUserPlan() {
            // デモモードのローカルストレージをチェック
            const demoSubscription = localStorage.getItem('demo_subscription_' + currentUser.id);
            
            if (demoSubscription) {
                const demoData = JSON.parse(demoSubscription);
                return demoData.planType.toLowerCase();
            }

            try {
                const { data: profile, error } = await client
                    .from('profiles')
                    .select('*')
                    .eq('id', currentUser.id)
                    .maybeSingle();
                if (error || !profile) return 'free';
                
                const planName = profile.subscription_plan?.toLowerCase();
                if (planName?.includes('premium')) return 'premium';
                if (planName?.includes('standard')) return 'standard';
                return 'free';
            } catch (error) {
                console.error('Error getting user plan:', error);
                return 'free';
            }
        }

        // 今日の予想読み込み（メインレースのみ）
        async function loadTodayPredictions(userPlan = 'free') {
            const todayPredictions = document.getElementById('today-predictions');
            
            try {
                // 実際のデータを読み込み
                const response = await fetch('/data/allRacesPrediction.json');
                const allRacesData = await response.json();
                
                // メインレース（11R）を取得
                const mainRace = allRacesData.races.find(race => race.isMainRace === true);
                
                if (mainRace && mainRace.raceInfo && mainRace.horses) {
                    const { raceInfo, horses } = mainRace;
                    const raceTitle = `${raceInfo.track} ${raceInfo.raceNumber} ${raceInfo.raceName}`;
                    
                    // 予想馬（本命と対抗）を取得
                    const recommendedHorses = [];
                    if (horses.main) recommendedHorses.push(horses.main.name);
                    if (horses.rival) recommendedHorses.push(horses.rival.name);
                    
                    const recommendedHorsesText = recommendedHorses.join('、');
                    const confidence = raceInfo.confidence ? parseFloat(raceInfo.confidence) : 90;
                    
                    // プランに応じたリンクを生成
                    let detailLink = '';
                    if (userPlan === 'premium') {
                        detailLink = '<a href="/premium-predictions/" style="color: #3b82f6; text-decoration: none;">プレミアム予想ページ</a>';
                    } else if (userPlan === 'standard') {
                        detailLink = '<a href="/standard-predictions/" style="color: #3b82f6; text-decoration: none;">スタンダード予想ページ</a>';
                    } else {
                        detailLink = '<a href="/free-prediction/" style="color: #3b82f6; text-decoration: none;">無料予想ページ</a>';
                    }
                    
                    todayPredictions.innerHTML = `
                        <div class="prediction-preview">
                            <div class="race-item">
                                <div class="race-info">
                                    <h4>${raceTitle}</h4>
                                    <p>推奨: ${recommendedHorsesText}</p>
                                </div>
                                <div class="confidence-badge">信頼度: ${confidence}%</div>
                            </div>
                            <p style="margin-top: 15px; color: #94a3b8; font-size: 14px; text-align: center;">
                                詳しい予想は${detailLink}をご覧ください
                            </p>
                        </div>
                    `;
                } else {
                    // データが取得できない場合のフォールバック
                    todayPredictions.innerHTML = `
                        <div class="prediction-preview">
                            <div class="race-item">
                                <div class="race-info">
                                    <h4>本日のメインレース</h4>
                                    <p>予想データを準備中です</p>
                                </div>
                                <div class="confidence-badge">準備中</div>
                            </div>
                        </div>
                    `;
                }
            } catch (error) {
                console.error('Failed to load prediction data:', error);
                // エラー時のフォールバック
                todayPredictions.innerHTML = `
                    <div class="prediction-preview">
                        <div class="race-item">
                            <div class="race-info">
                                <h4>本日のメインレース</h4>
                                <p>予想データの読み込みに失敗しました</p>
                            </div>
                            <div class="confidence-badge">エラー</div>
                        </div>
                    </div>
                `;
            }
        }

        // プラン表示名取得
        function getPlanDisplayName(planKey) {
            if (!planKey || planKey === 'なし') return '未契約';
            
            const plan = Object.values(PRICING_PLANS).find(p => p.stripePriceId.includes(planKey));
            return plan ? plan.name : planKey;
        }

        // プランに応じて予想リンクを更新
        function updatePredictionLink(planName) {
            const predictionLink = document.getElementById('prediction-link');
            if (!predictionLink) return;

            // プランに応じてリンクを設定
            if (planName === 'premium') {
                predictionLink.href = '/premium-predictions';
                predictionLink.textContent = '全レース予想を見る';
            } else if (planName === 'standard') {
                predictionLink.href = '/standard-predictions';
                predictionLink.textContent = 'スタンダード予想を見る';
            } else {
                // 無料プランの場合
                predictionLink.href = '/free-prediction';
                predictionLink.textContent = '無料予想を見る';
            }
        }

        // ログアウト処理
        document.getElementById('logout-btn').addEventListener('click', async () => {
            try {
                const { error } = await client.auth.signOut();
                if (error) throw error;
                
                window.location.href = '/auth/login?message=' + encodeURIComponent('ログアウトしました');
            } catch (error) {
                console.error('Logout error:', error);
                alert('ログアウトに失敗しました');
            }
        });
    </script>
</body>
</html>