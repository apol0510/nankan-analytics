<style>
    .cancel-container {
        max-width: 600px;
        margin: 60px auto;
        padding: 0 20px;
    }

    .cancel-content {
        background: rgba(30, 41, 59, 0.8);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(239, 68, 68, 0.3);
        border-radius: 16px;
        padding: 48px;
        text-align: center;
    }

    .cancel-icon {
        font-size: 64px;
        margin-bottom: 24px;
        filter: grayscale(0.2);
    }

    .cancel-title {
        font-size: 28px;
        font-weight: 700;
        color: #ef4444;
        margin-bottom: 16px;
    }

    .cancel-message {
        color: #cbd5e1;
        font-size: 16px;
        line-height: 1.6;
        margin-bottom: 32px;
    }

    .action-buttons {
        display: flex;
        gap: 16px;
        justify-content: center;
        margin-bottom: 48px;
        flex-wrap: wrap;
    }

    .btn {
        padding: 12px 24px;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s;
        display: inline-block;
    }

    .btn.primary {
        background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%);
        color: white;
    }

    .btn.primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 25px rgba(59, 130, 246, 0.3);
    }

    .btn.secondary {
        background: transparent;
        color: #94a3b8;
        border: 1px solid rgba(148, 163, 184, 0.3);
    }

    .btn.secondary:hover {
        background: rgba(148, 163, 184, 0.1);
        color: #e2e8f0;
    }

    .help-section {
        padding-top: 32px;
        border-top: 1px solid rgba(148, 163, 184, 0.2);
    }

    .help-section h3 {
        color: #f1f5f9;
        font-size: 18px;
        margin-bottom: 12px;
    }

    .help-section p {
        color: #94a3b8;
        font-size: 14px;
        margin-bottom: 16px;
    }

    .contact-link {
        color: #3b82f6;
        text-decoration: none;
        font-size: 14px;
        transition: color 0.3s;
    }

    .contact-link:hover {
        color: #60a5fa;
        text-decoration: underline;
    }

    @media (max-width: 480px) {
        .cancel-content {
            padding: 32px 24px;
        }
        
        .action-buttons {
            flex-direction: column;
        }
        
        .btn {
            width: 100%;
        }
    }
</style>