<script is:inline>
document.addEventListener('DOMContentLoaded', function() {
    const filterBtn = document.getElementById('demoFilterBtn');
    const demoContent = document.getElementById('demoContent');

    if (filterBtn && demoContent) {
        filterBtn.addEventListener('click', function() {
            const filterText = this.querySelector('.filter-text');

            if (demoContent.style.display === 'none') {
                // 段階1: 絞り込む → 絞り込み中（青・pulse）
                this.classList.add('filtering');
                filterText.textContent = '高性能AI三連複 絞り込み中';

                // 段階2: 1.6秒後に 絞り込み中 → 絞り込み完了（緑）
                setTimeout(() => {
                    this.classList.remove('filtering');
                    this.classList.add('filtered');
                    filterText.textContent = '高性能AI三連複 絞り込み完了';
                    demoContent.style.display = 'block';

                    // スムーズスクロール
                    setTimeout(() => {
                        demoContent.scrollIntoView({ behavior: 'smooth', block: 'start' });
                    }, 100);
                }, 1600);
            } else {
                // 閉じる処理
                demoContent.style.display = 'none';
                this.classList.remove('filtered');
                filterText.textContent = '高性能AI三連複 絞り込む';
            }
        });
    }
});
</script>
