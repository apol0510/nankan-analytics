---
export const prerender = true;
import BaseLayout from '../layouts/BaseLayout.astro';

const title = '高性能AI三連複の自動絞り込み機能 実体験 | NANKANアナリティクス';
const description = '購入前に実際の的中レースで体験！高性能AI三連複の自動絞り込み機能の実体験。累積スコアベースの自動戦略選択で、わずか9点の少点数買い目を実現。';

// 固定デモデータ（2025年9月3日 大井競馬11R アフター５スター賞）
const demoData = {
    raceDate: '2025年9月3日',
    track: '大井競馬',
    raceNumber: '11R',
    raceName: 'アフター５スター賞（SIII）',
    distance: 'ダ1,200m',
    horseCount: 16,
    startTime: '20:10',

    // 馬データ
    main: {
        number: 11,
        name: 'ファーンヒル',
        role: '本命',
        confidence: 88,
        rating: '★★★',
        features: {
            stability: 85,
            ability: 85,
            pace: 94
        }
    },
    sub: {
        number: 1,
        name: 'マックス',
        role: '対抗',
        confidence: 85,
        rating: '★★★',
        features: {
            stability: 84,
            ability: 85,
            pace: 86
        }
    },
    minor: [
        { number: 2, name: 'トーセンサンダー', role: '単穴', confidence: 82, rating: '★★★' },
        { number: 12, name: 'ドリームビリーバー', role: '単穴', confidence: 75, rating: '★★★' }
    ],
    low: [
        { number: 15, name: 'オメガレインボー', confidence: 74 },
        { number: 4, name: 'ジゼル', confidence: 73 },
        { number: 3, name: 'リオンダリーナ', confidence: 71 },
        { number: 9, name: 'シーサーペント', confidence: 71 }
    ],
    other: [
        { number: 7, name: 'ポリゴンウェイヴ', confidence: 70 },
        { number: 10, name: 'ボヌールバローズ', confidence: 67 },
        { number: 14, name: 'スワーヴシャルル', confidence: 66 },
        { number: 16, name: 'ワラ', confidence: 66 }
    ],

    // 高性能AI三連複買い目
    sanrenpukuBets: [
        '11-1-2.3.4.12.15',
        '11-2-3.4.12.15'
    ],
    betCount: 9,

    // 的中結果
    result: {
        order: '2-11-12',
        payout: 36900,
        isHit: true
    }
};

// 累積スコア基準の戦略選択ロジック
const mainScore = demoData.main.confidence;
let selectedStrategy = '';
let strategyDescription = '';

if (mainScore >= 89) {
    selectedStrategy = '少点数型+バランス型ミックス';
    strategyDescription = '累積スコア89pt以上。本命の信頼度が非常に高いため、少点数型とバランス型の上位5点のみに絞り込みます。';
} else if (mainScore === 88) {
    selectedStrategy = '少点数型寄り';
    strategyDescription = '累積スコア88pt。本命の信頼度が高いため、少点数型を中心に7点に絞り込みます。';
} else if (mainScore === 87) {
    selectedStrategy = 'バランス型';
    strategyDescription = '累積スコア87pt。バランスの取れた配置のため、バランス型10点を選択します。';
} else if (mainScore === 86) {
    selectedStrategy = 'バランス型+高配当型ミックス';
    strategyDescription = '累積スコア86pt。若干波乱含みのため、バランス型と高配当型から10点選択します。';
} else {
    selectedStrategy = '高配当型';
    strategyDescription = '累積スコア85pt以下。穴狙いの配置のため、高配当型10点を選択します。';
}

// 今回のデモケースは88ptなので「少点数型寄り 9点」
const actualStrategy = '少点数型寄り';
const actualDescription = '本命ファーンヒル（88pt）の信頼度が高いため、少点数型を中心に9点に絞り込みました。';
---

<BaseLayout title={title} description={description}>
    <div class="sample-page-container">
        <!-- ヘッダー -->
        <div class="sample-header">
            <div class="badge-new">🎯 無料実体験</div>
            <h1>高性能AI三連複の自動絞り込み機能 実体験</h1>
            <p class="header-description">
                実際のレースでPremium Sanrenpukuの絞り込み機能を実体験できます。
            </p>
        </div>

        <!-- レース情報 -->
        <div class="sample-race-info">
            <h2>📅 2025年9月3日　アフター５スター賞（SIII）</h2>
            <div class="race-meta">
                <span class="meta-item">🏇 {demoData.track} {demoData.raceNumber}</span>
