            <div class="sanrenpuku-bets">
                <h3>三連複買い目</h3>
                <div class="bet-list">
                    {demoData.sanrenpukuBets.map(bet => (
                        <div class="bet-item">
                            <span class="bet-formula">{bet}</span>
                        </div>
                    ))}
                </div>
                <div class="bet-total">
                    <span class="total-label">計</span>
                    <span class="total-count">{demoData.betCount}点</span>
                </div>
            </div>

            <!-- 的中結果 -->
            {demoData.result.isHit && (
            <div class="result-section hit">
                <div class="result-header">
                    <h2>🎊 的中結果</h2>
                    <span class="hit-badge">的中！</span>
                </div>
                <div class="result-details">
                    <div class="result-order">
                        <span class="order-label">着順</span>
                        <span class="order-value">{demoData.result.order}</span>
                    </div>
                    <div class="result-payout">
                        <span class="payout-label">払い戻し</span>
                        <span class="payout-value">¥{demoData.result.payout.toLocaleString()}</span>
