        document.addEventListener('DOMContentLoaded', function() {
            logAllRaces('🚀 システム初期化完了');
            updateImportanceBars();
            generateRaceEditButtons(); // レース編集ボタンを動的生成
            
            // 初期データをチェック（もしあれば）
            if (allRacesData) {
                validateRaceConfiguration(allRacesData);
            }
        });
