                /([◎○◯▲△×☆★])\s*([^\s]+)/g
            ];

            for (const pattern of horsePatterns) {
                const matches = [...text.matchAll(pattern)];
                if (matches.length > 0) {
                    matches.forEach(match => {
                        const mark = match[1];
                        const numberStr = match[2] || '';
