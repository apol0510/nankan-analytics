    </div>

    <script type="module">
        const form = document.getElementById('newsletter-form');
        const sendBtn = document.getElementById('send-btn');
        const loading = document.getElementById('loading');
        const messageContainer = document.getElementById('message-container');

        // „Éï„Ç©„Éº„É†ÈÄÅ‰ø°Âá¶ÁêÜ
        form.addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const targetGroups = Array.from(document.querySelectorAll('input[name="target-groups"]:checked'))
                .map(cb => cb.value);
            
            if (targetGroups.length === 0) {
                showMessage('ÈÖç‰ø°ÂØæË±°„Ç∞„É´„Éº„Éó„ÇíÈÅ∏Êäû„Åó„Å¶„Åè„Å†„Åï„ÅÑ„ÄÇ', 'error');
                return;
            }

            const formData = {
                targetGroups,
                subject: document.getElementById('subject').value,
                content: document.getElementById('content').value,
                contentType: document.getElementById('content-type').value
            };

            setLoading(true);
            clearMessages();

            try {
                const response = await fetch('/api/haihai-mail/send-newsletter', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(formData)
                });

                const result = await response.json();

                if (response.ok && result.success) {
                    showMessage('„É°„É´„Éû„Ç¨„ÅÆ‰∏ãÊõ∏„Åç„Çí‰øùÂ≠ò„Åó„Åæ„Åó„ÅüÔºÅÈÖçÈÖç„É°„Éº„É´ÁÆ°ÁêÜÁîªÈù¢„Åã„ÇâÈÖç‰ø°‰∫àÁ¥Ñ„ÇíË°å„Å£„Å¶„Åè„Å†„Åï„ÅÑ„ÄÇ', 'success');
                    resetForm();
                } else {
                    throw new Error(result.error || 'ÈÖç‰ø°„Å´Â§±Êïó„Åó„Åæ„Åó„Åü');
                }
            } catch (error) {
                console.error('Newsletter send error:', error);
                showMessage(error.message || '„É°„É´„Éû„Ç¨ÈÖç‰ø°„Å´Â§±Êïó„Åó„Åæ„Åó„Åü„ÄÇ', 'error');
            } finally {
                setLoading(false);
            }
        });

        // Áµ±Ë®àÊÉÖÂ†±„ÇíË™≠„ÅøËæº„Åø
        window.loadStats = async function() {
            try {
                const response = await fetch('/api/haihai-mail/get-stats');
                const result = await response.json();

                if (response.ok && result.success) {
                    document.getElementById('free-count').textContent = result.data.free || '0';
                    document.getElementById('standard-count').textContent = result.data.standard || '0';
                    document.getElementById('premium-count').textContent = result.data.premium || '0';
                } else {
                    console.warn('Áµ±Ë®àÂèñÂæó„Å´Â§±Êïó:', result.error);
                }
            } catch (error) {
                console.error('Áµ±Ë®àÂèñÂæó„Ç®„É©„Éº:', error);
            }
        };

        // Êé•Á∂ö„ÉÜ„Çπ„Éà
        window.testConnection = async function() {
            const testBtn = document.getElementById('test-btn');
            const testResult = document.getElementById('test-result');
            
            testBtn.disabled = true;
            testBtn.textContent = '„ÉÜ„Çπ„Éà‰∏≠...';
            
            try {
                const response = await fetch('/api/haihai-mail/test-connection');
                const result = await response.json();
                
                if (result.success) {
                    testResult.innerHTML = '<div class="success-message">‚úÖ ÈÖçÈÖç„É°„Éº„É´API„Å´Ê≠£Â∏∏„Å´Êé•Á∂ö„Åß„Åç„Åæ„Åó„Åü</div>';
                } else {
                    testResult.innerHTML = `<div class="error-message">‚ùå Êé•Á∂ö„Ç®„É©„Éº: ${result.message}</div>`;
                }
            } catch (error) {
                testResult.innerHTML = `<div class="error-message">‚ùå Êé•Á∂ö„ÉÜ„Çπ„Éà„Å´Â§±Êïó„Åó„Åæ„Åó„Åü: ${error.message}</div>`;
            } finally {
                testBtn.disabled = false;
                testBtn.textContent = 'Êé•Á∂ö„ÉÜ„Çπ„ÉàÂÆüË°å';
            }
        };

        // „Éó„É¨„Éì„É•„ÉºÊ©üËÉΩ
        window.previewNewsletter = function() {
            const subject = document.getElementById('subject').value;
            const content = document.getElementById('content').value;
            const contentType = document.getElementById('content-type').value;
            
            if (!subject || !content) {
                showMessage('‰ª∂Âêç„Å®ÂÜÖÂÆπ„ÇíÂÖ•Âäõ„Åó„Å¶„Åè„Å†„Åï„ÅÑ„ÄÇ', 'error');
                return;
            }

            const previewWindow = window.open('', 'preview', 'width=600,height=800');
            const previewContent = contentType === 'html' ? content : content.replace(/\n/g, '<br>');
            
            previewWindow.document.write(`
                <html>
                <head>
                    <title>„Éó„É¨„Éì„É•„Éº: ${subject}</title>
                    <style>
                        body { font-family: Arial, sans-serif; padding: 20px; }
                        .preview-header { background: #f0f0f0; padding: 15px; margin-bottom: 20px; }
                    </style>
                </head>
                <body>
                    <div class="preview-header">
                        <h2>‰ª∂Âêç: ${subject}</h2>
                        <p>„Ç≥„É≥„ÉÜ„É≥„ÉÑ„Çø„Ç§„Éó: ${contentType.toUpperCase()}</p>
                    </div>
                    <div class="preview-content">
                        ${previewContent}
                    </div>
                </body>
                </html>
            `);
        };

        // „Éï„Ç©„Éº„É†„É™„Çª„ÉÉ„Éà
        window.resetForm = function() {
            form.reset();
            document.querySelectorAll('input[name="target-groups"]').forEach(cb => cb.checked = true);
        };

        // „Éò„É´„Éë„ÉºÈñ¢Êï∞
        function setLoading(isLoading) {
            if (isLoading) {
                sendBtn.disabled = true;
                sendBtn.style.display = 'none';
                loading.style.display = 'flex';
            } else {
                sendBtn.disabled = false;
                sendBtn.style.display = 'inline-block';
                loading.style.display = 'none';
            }
        }

        function showMessage(message, type = 'info') {
            const messageDiv = document.createElement('div');
            messageDiv.className = `${type}-message`;
            messageDiv.textContent = message;
            messageContainer.appendChild(messageDiv);
            
            // 5ÁßíÂæå„Å´Ëá™ÂãïÂâäÈô§
            setTimeout(() => {
                if (messageDiv.parentNode) {
                    messageDiv.parentNode.removeChild(messageDiv);
                }
            }, 5000);
        }

        function clearMessages() {
            messageContainer.innerHTML = '';
        }

        // ÂàùÊúüÁµ±Ë®àË™≠„ÅøËæº„Åø
        loadStats();
    </script>
