---
// 戦略表示の共通コンポーネント
export interface Props {
    strategy: {
        title: string;
        recommendation: number;
        hitRate: string;
        returnRate: string;
        riskLevel: 'low' | 'medium' | 'high';
        bets: Array<{type: string; horses: string; points: string}>;
        expectedPayout: string;
        payoutType: string;
    };
    strategyType: 'safe' | 'balance' | 'aggressive';
    icon: string;
    masked?: boolean;
    showPremiumOverlay?: boolean;
}

const { strategy, strategyType, icon, masked = false, showPremiumOverlay = false } = Astro.props;
---

<div class={`bet-strategy ${masked ? 'premium-masked' : ''}`}>
    <div class="strategy-title">{icon} {strategy.title}（推奨度 {'★'.repeat(strategy.recommendation)}{'☆'.repeat(5-strategy.recommendation)}）</div>
    <div style="color: #94a3b8; margin-bottom: 15px;">
        AIモデル予測: 的中率{strategy.hitRate}% / 期待回収率{strategy.returnRate}%
    </div>
    <div class="bet-list">
        {strategy.bets.map(bet => (
            <div class="bet-item">
                <span class="bet-type">{bet.type}</span>
                <span class="bet-horses">{bet.horses}</span>
                <span class="bet-points">{bet.points}</span>
            </div>
        ))}
    </div>
    <div class="risk-indicator">
        <span style="color: #64748b; font-size: 0.85rem;">リスク:</span>
        <div class={`risk-bar active risk-${strategy.riskLevel}`} style={strategyType === 'safe' ? 'width: 30%;' : strategyType === 'balance' ? 'width: 60%;' : 'width: 100%;'}></div>
        <div class="risk-bar"></div>
        <div class="risk-bar"></div>
    </div>
    <div class="expected-return">
        <div class="return-value">推定配当 {strategy.expectedPayout}</div>
        <div style="color: #94a3b8; font-size: 0.9rem;">{strategy.payoutType}</div>
    </div>
    
    {showPremiumOverlay && (
        <div class="premium-overlay">
            <div class="premium-content">
                <div class="premium-icon">🔒</div>
                <div class="premium-text">有料会員限定</div>
                <div class="premium-subtitle">投資戦略を完全表示</div>
                <button class="premium-button">今すぐ登録</button>
            </div>
        </div>
    )}
</div>

<style>
    .bet-strategy {
        background: rgba(30, 41, 59, 0.6);
        border: 1px solid rgba(59, 130, 246, 0.3);
        border-radius: 12px;
        padding: 20px;
        margin-bottom: 20px;
        backdrop-filter: blur(10px);
    }

    .strategy-title {
        font-size: 1.1rem;
        font-weight: 700;
        color: #3b82f6;
        margin-bottom: 15px;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .bet-list {
        margin-bottom: 15px;
    }

    .bet-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 8px 0;
        border-bottom: 1px solid rgba(148, 163, 184, 0.1);
    }

    .bet-item:last-child {
        border-bottom: none;
    }

    .bet-type {
        color: #10b981;
        font-weight: 600;
        min-width: 60px;
    }

    .bet-horses {
        color: #e2e8f0;
        flex: 1;
        text-align: center;
        font-weight: 500;
    }

    .bet-points {
        color: #fbbf24;
        font-weight: 600;
        min-width: 60px;
        text-align: right;
    }

    .risk-indicator {
        display: flex;
        align-items: center;
        gap: 8px;
        margin-bottom: 15px;
    }

    .risk-bar {
        height: 6px;
        background: rgba(148, 163, 184, 0.2);
        border-radius: 3px;
        flex: 1;
    }

    .risk-bar.active.risk-low {
        background: #10b981;
    }

    .risk-bar.active.risk-medium {
        background: #f59e0b;
    }

    .risk-bar.active.risk-high {
        background: #ef4444;
    }

    .expected-return {
        text-align: center;
        padding: 12px;
        background: rgba(59, 130, 246, 0.1);
        border-radius: 8px;
    }

    .return-value {
        font-size: 1.1rem;
        font-weight: 700;
        color: #3b82f6;
        margin-bottom: 4px;
    }

    /* Premium overlay styles */
    .premium-masked {
        position: relative;
        overflow: hidden;
    }

    .premium-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(15, 23, 42, 0.95);
        backdrop-filter: blur(8px);
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 12px;
    }

    .premium-content {
        text-align: center;
        color: white;
        z-index: 10;
    }

    .premium-icon {
        font-size: 48px;
        margin-bottom: 16px;
        opacity: 0.8;
    }

    .premium-text {
        font-size: 18px;
        font-weight: 700;
        color: #fbbf24;
        margin-bottom: 8px;
    }

    .premium-subtitle {
        color: #94a3b8;
        margin-bottom: 20px;
        font-size: 14px;
    }

    .premium-button {
        background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%);
        color: white;
        border: none;
        padding: 12px 24px;
        border-radius: 25px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s;
    }

    .premium-button:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(59, 130, 246, 0.3);
    }
</style>